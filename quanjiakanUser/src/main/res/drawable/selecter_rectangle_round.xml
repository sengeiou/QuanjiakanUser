<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/size_5"/>
            <gradient android:startColor="@color/colorSkyBlue" android:endColor="@color/colorSkyBlue"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/size_5"/>
            <gradient android:startColor="@color/colorGlassGreen" android:endColor="@color/colorGlassGreen"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/size_5"/>
            <gradient android:startColor="@color/colorNormalGrey" android:endColor="@color/colorNormalGrey"/>
        </shape>
    </item>
</selector>