<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_line"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="27dp"
        android:background="@drawable/bg_dialog_selector"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_18"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/font_color_333333"
            android:text="输入目标步数"
            android:textSize="@dimen/font_20" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:gravity="center"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_color_333333"
                android:textSize="@dimen/font_18"
                android:padding="@dimen/size_10"
                android:layout_gravity="center"
                android:inputType="number"
                android:textColorHint="@color/font_color_999999"
                android:background="@drawable/steps_input_pre"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="4dp"
                android:textSize="@dimen/font_14"
                android:textColor="@color/font_color_333333"
                android:text="步"/>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_15"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            >

            <TextView
                android:id="@+id/btn_cancel"
                android:layout_width="@dimen/height_120"
                android:layout_height="@dimen/height_35"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:text="@string/cancel"
                android:textSize="@dimen/font_16"
                android:background="@drawable/selecter_hollow_transport_dcdcdc_round2"
                />

            <TextView
                android:id="@+id/btn_confirm"
                android:layout_width="@dimen/height_120"
                android:layout_height="@dimen/height_35"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:text="确认"
                android:textSize="@dimen/font_16"
                android:textColor="@color/color_title_green"
                android:background="@drawable/selecter_hollow_transport_dcdcdc_round2"
                />
        </RelativeLayout>
    </LinearLayout>




</LinearLayout>