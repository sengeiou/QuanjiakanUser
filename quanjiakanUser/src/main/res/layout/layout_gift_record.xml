<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_color">

    <include
        android:id="@+id/layout_title"
        layout="@layout/layout_title" />

    <LinearLayout
        android:id="@+id/condition_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_42"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/layout_title"
        android:background="@drawable/selecter_white_round_10_bottom"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/condition_line_left"
            android:layout_width="@dimen/size_0"
            android:layout_height="@dimen/height_42"
            android:layout_weight="1"
            android:background="@drawable/selector_device_guide_line"
            android:orientation="vertical">

            <TextView
                android:id="@+id/condition_left"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_40"
                android:gravity="center"
                android:text="送出礼物"
                android:textColor="@color/color_title_green"
                android:textSize="@dimen/font_14" />

            <View
                android:id="@+id/condition_left_div"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_2"
                android:layout_marginLeft="@dimen/margin_30"
                android:layout_marginRight="@dimen/margin_30"
                android:background="@color/color_title_green" />
        </LinearLayout>


        <View
            android:layout_width="@dimen/size_1"
            android:layout_height="match_parent"
            android:background="@color/colorAlphaBlack_11" />

        <LinearLayout
            android:id="@+id/condition_line_right"
            android:layout_width="@dimen/size_0"
            android:layout_height="@dimen/height_42"
            android:layout_weight="1"
            android:background="@drawable/selector_device_guide_line"
            android:orientation="vertical">

            <TextView
                android:id="@+id/condition_right"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_40"
                android:gravity="center"
                android:text="充值记录"
                android:textColor="@color/colorAlphaBlack_BB"
                android:textSize="@dimen/font_14" />

            <View
                android:id="@+id/condition_right_div"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_2"
                android:layout_marginLeft="@dimen/margin_30"
                android:layout_marginRight="@dimen/margin_30"
                android:background="@color/color_title_green" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/div"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1p"
        android:layout_below="@id/condition_line" />

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/div"></FrameLayout>

</RelativeLayout>