<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_color"
    android:orientation="vertical">

    <include
        android:id="@+id/title"
        layout="@layout/layout_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/height_150"
            android:layout_height="@dimen/height_150"
            android:src="@drawable/ic_launcher"
            android:layout_marginTop="@dimen/size_13"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/numbers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/image"
            android:layout_alignBottom="@id/image"
            android:layout_alignRight="@id/image"
            android:background="@color/colorAlphaBlack_33"
            android:text="222222"
            android:textColor="@color/white"
            android:textSize="@dimen/font_12"
            android:padding="@dimen/size_5"
            android:gravity="right"
            />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务站名称"
            android:textColor="@color/font_color_333333"
            android:textSize="@dimen/font_16"
            android:layout_below="@+id/image"
            android:layout_marginTop="@dimen/size_15"
            android:layout_marginBottom="@dimen/size_20"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1p"
        android:background="@color/font_color_CCCCCC"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1p"
        android:background="@color/font_color_DDDDDD"
        android:layout_marginTop="@dimen/margin_10"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地址:"
                android:textColor="@color/font_color_999999"
                android:textSize="@dimen/font_16"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_marginLeft="@dimen/size_17"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginBottom="@dimen/margin_10"
                />
            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="服务站名称"
                android:textColor="@color/font_color_333333"
                android:textSize="@dimen/font_16"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_10"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1p"
            android:background="@color/font_color_CCCCCC"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服务时间:"
                android:textColor="@color/font_color_999999"
                android:textSize="@dimen/font_16"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_marginLeft="@dimen/size_17"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginBottom="@dimen/margin_10"
                />
            <TextView
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="服务站名称"
                android:textColor="@color/font_color_333333"
                android:textSize="@dimen/font_16"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_10"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1p"
            android:background="@color/font_color_CCCCCC"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="义工服务内容:"
                android:textColor="@color/font_color_999999"
                android:textSize="@dimen/font_16"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_marginLeft="@dimen/size_17"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginBottom="@dimen/margin_10"
                />
            <TextView
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="服务站名称"
                android:textColor="@color/font_color_333333"
                android:textSize="@dimen/font_16"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_10"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1p"
            android:background="@color/font_color_CCCCCC"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="其他特色服务:"
                android:textColor="@color/font_color_999999"
                android:textSize="@dimen/font_16"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_marginLeft="@dimen/size_17"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginBottom="@dimen/margin_10"
                />
            <TextView
                android:id="@+id/specific"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="服务站名称"
                android:textColor="@color/font_color_333333"
                android:textSize="@dimen/font_16"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_10"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1p"
            android:background="@color/font_color_CCCCCC"
            />

    </LinearLayout>

    <Button
        android:id="@+id/call"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_40"
        android:background="@drawable/selecter_hollow_transport_0e7b7b"
        android:layout_below="@+id/et_password"
        android:layout_centerHorizontal="true"
        android:textColor="#0e7b7b"
        android:textSize="@dimen/font_16"
        android:gravity="center"
        android:text="拨打服务站电话"
        android:drawableLeft="@drawable/volunteer_phone_icon"
        android:drawablePadding="@dimen/margin_5"
        android:padding="@dimen/margin_10"
        android:layout_marginTop="@dimen/size_60"
        android:layout_marginBottom="@dimen/margin_20"
        android:onClick="onClick"
        android:layout_gravity="bottom|center_horizontal"
        />
</LinearLayout>