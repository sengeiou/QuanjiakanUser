<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:id="@+id/commend_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/size_10"
        android:layout_marginBottom="@dimen/size_10"
        android:layout_marginRight="@dimen/size_15"
        android:layout_marginLeft="@dimen/size_20"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:gravity="center_horizontal"
        >
        <ImageView
            android:id="@+id/commend"
            android:layout_width="@dimen/size_20"
            android:layout_height="@dimen/size_20"
            android:src="@drawable/ic_launcher"
            />
        <TextView
            android:id="@+id/commend_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_2"
            android:text="2222"
            android:textSize="@dimen/font_10"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/like_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/size_10"
        android:layout_marginBottom="@dimen/size_10"
        android:layout_centerVertical="true"
        android:gravity="center_horizontal"
        android:layout_toLeftOf="@id/commend_line"
        android:weightSum="1">
        <ImageView
            android:id="@+id/like"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_20"
            android:src="@drawable/ic_launcher"
            android:layout_weight="0.33" />
        <TextView
            android:id="@+id/like_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_2"
            android:text="2222"
            android:textSize="@dimen/font_10"
            />
    </LinearLayout>
    <EditText
        android:id="@+id/input_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/like_line"
        android:layout_marginRight="@dimen/size_19"
        android:layout_marginLeft="@dimen/size_8"
        android:layout_centerVertical="true"
        android:background="@drawable/selecter_rectangle_hollow"
        android:paddingTop="@dimen/size_8"
        android:paddingBottom="@dimen/size_8"
        android:paddingLeft="@dimen/size_13"
        android:paddingRight="@dimen/size_13"
        />
</RelativeLayout>