<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
        android:id="@+id/layout_title"
        layout="@layout/layout_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/order"
        android:layout_below="@+id/layout_title">

        <LinearLayout
            android:id="@+id/layout_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/height_100"
                android:layout_height="@dimen/height_100"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/size_15"
                android:src="@drawable/ic_launcher" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="@dimen/margin_10"
                    android:background="@drawable/selecter_solid_14a9a8"
                    android:padding="@dimen/size_2"
                    android:text="@string/doctor_out_go_servicetype_hurry"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="您的订单已被接单"
                    android:textColor="@color/font_color_333333"
                    android:textSize="@dimen/font_16" />
            </LinearLayout>

            <TextView
                android:id="@+id/orderid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/margin_15"
                android:layout_marginTop="@dimen/size_10"
                android:text="订单号:QJK122222201609031434"
                android:textColor="@color/font_color_333333"
                android:textSize="@dimen/font_16" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_10"
                android:background="@color/main_bg_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_marginTop="@dimen/margin_20"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="医        生:"
                    android:textColor="@color/font_color_333333"
                    android:textSize="@dimen/font_16"
                    />
                <TextView
                    android:id="@+id/patient_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="张男田  男  47岁"
                    android:textColor="@color/font_color_999999"
                    android:textSize="@dimen/font_16"
                    android:layout_marginLeft="@dimen/margin_10"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_marginTop="@dimen/margin_10"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="电        话:"
                    android:textColor="@color/font_color_333333"
                    android:textSize="@dimen/font_16"
                    />
                <TextView
                    android:id="@+id/patient_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="张男田  男  47岁"
                    android:textColor="@color/font_color_999999"
                    android:textSize="@dimen/font_16"
                    android:layout_marginLeft="@dimen/margin_10"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_marginTop="@dimen/margin_10"
                android:visibility="gone"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地        址:"
                    android:textColor="@color/font_color_333333"
                    android:textSize="@dimen/font_16"
                    />
                <TextView
                    android:id="@+id/patient_addr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="张男田  男  47岁"
                    android:textColor="@color/font_color_999999"
                    android:textSize="@dimen/font_16"
                    android:layout_marginLeft="@dimen/margin_10"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_marginTop="@dimen/margin_10"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="下单时间:"
                    android:textColor="@color/font_color_333333"
                    android:textSize="@dimen/font_16"
                    />
                <TextView
                    android:id="@+id/patient_order_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="张男田  男  47岁"
                    android:textColor="@color/font_color_999999"
                    android:textSize="@dimen/font_16"
                    android:layout_marginLeft="@dimen/margin_10"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/margin_20"
                android:background="@drawable/selecter_hollow_transport_holo_blue"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="医生介绍:"
                    android:textColor="@color/font_color_333333"
                    android:textSize="@dimen/font_18"
                    android:layout_margin="@dimen/margin_10"
                    />
                <TextView
                    android:id="@+id/description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="张男田  男  47岁"
                    android:textColor="@color/font_color_999999"
                    android:textSize="@dimen/font_16"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_marginRight="@dimen/margin_10"
                    android:layout_marginBottom="@dimen/margin_10"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="擅长:"
                    android:textColor="@color/font_color_333333"
                    android:textSize="@dimen/font_18"
                    android:layout_margin="@dimen/margin_10"
                    />
                <TextView
                    android:id="@+id/good_at"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="张男田  男  47岁"
                    android:textColor="@color/font_color_999999"
                    android:textSize="@dimen/font_16"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_marginRight="@dimen/margin_10"
                    android:layout_marginBottom="@dimen/margin_10"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>