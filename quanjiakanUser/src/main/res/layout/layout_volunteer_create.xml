<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_color"
    >
    <include
        android:id="@+id/title"
        layout="@layout/layout_title"/>
    <ScrollView
        android:id="@+id/scroll_content"
        android:layout_below="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:id="@+id/ll_urgency_degree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/release_nav_volunteer_creat"
                android:layout_marginRight="@dimen/size_17"
                android:layout_marginLeft="@dimen/size_17"
                android:layout_marginTop="@dimen/size_13"
                android:gravity="center_vertical"
                android:padding="@dimen/size_13"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="紧急程度"
                    android:textSize="@dimen/font_16"
                    android:textColor="@color/font_color_333333"
                    />
                <TextView
                    android:id="@+id/tv_urgency_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:singleLine="true"
                    android:hint="请选择"
                    android:textColorHint="@color/font_color_999999"
                    android:textSize="@dimen/font_16"
                    android:textColor="@color/font_color_999999"
                    android:gravity="right"
                    android:drawableRight="@drawable/ico_more"
                    android:drawablePadding="@dimen/margin_5"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_select_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/release_nav_volunteer_creat"
                android:layout_marginRight="@dimen/size_17"
                android:layout_marginLeft="@dimen/size_17"
                android:layout_marginTop="@dimen/size_13"
                android:gravity="center_vertical"
                android:padding="@dimen/size_13"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="约定时间"
                    android:textSize="@dimen/font_16"
                    android:textColor="@color/font_color_333333"
                    />
                <TextView
                    android:id="@+id/tv_select_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:singleLine="true"
                    android:hint="请选择"
                    android:textColorHint="@color/font_color_999999"
                    android:textSize="@dimen/font_16"
                    android:textColor="@color/font_color_999999"
                    android:gravity="right"
                    android:drawableRight="@drawable/ico_more"
                    android:drawablePadding="@dimen/margin_5"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/release_nav_volunteer_creat"
                android:layout_marginRight="@dimen/size_17"
                android:layout_marginLeft="@dimen/size_17"
                android:layout_marginTop="@dimen/size_13"
                android:gravity="center_vertical"
                android:padding="@dimen/size_13"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="约定地点"
                    android:textSize="@dimen/font_16"
                    android:textColor="@color/font_color_333333"
                    />
                <TextView
                    android:id="@+id/tv_location_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:singleLine="true"
                    android:hint="请选择"
                    android:textColorHint="@color/font_color_999999"
                    android:textSize="@dimen/font_16"
                    android:textColor="@color/font_color_999999"
                    android:gravity="right"
                    android:drawableRight="@drawable/ico_more"
                    android:drawablePadding="@dimen/margin_5"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_select_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/release_nav_volunteer_creat"
                android:layout_marginRight="@dimen/size_17"
                android:layout_marginLeft="@dimen/size_17"
                android:layout_marginTop="@dimen/size_13"
                android:gravity="center_vertical"
                android:padding="@dimen/size_13"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="求助对象"
                    android:textSize="@dimen/font_16"
                    android:textColor="@color/font_color_333333"
                    />
                <TextView
                    android:id="@+id/tv_type_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:singleLine="true"
                    android:hint="请选择"
                    android:textColorHint="@color/font_color_999999"
                    android:textSize="@dimen/font_16"
                    android:textColor="@color/font_color_999999"
                    android:gravity="right"
                    android:drawableRight="@drawable/ico_more"
                    android:drawablePadding="@dimen/margin_5"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/release_nav_volunteer_creat"
                android:layout_marginRight="@dimen/size_17"
                android:layout_marginLeft="@dimen/size_17"
                android:layout_marginTop="@dimen/size_13"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/size_13"
                android:paddingRight="@dimen/size_13"
                android:paddingTop="@dimen/size_10"
                android:paddingBottom="@dimen/size_10"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="求助事项"
                    android:textSize="@dimen/font_16"
                    android:textColor="@color/font_color_333333"
                    />
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:orientation="horizontal">
                    
                    <TextView
                        android:id="@+id/tv_wash_clothes"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="洗衣"
                        android:gravity="center"
                        android:textColor="@color/font_color_999999"
                        android:background="@drawable/img_service_release_nor"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/tv_cooking"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="做饭"
                        android:gravity="center"
                        android:layout_marginLeft="8dp"
                        android:textColor="@color/font_color_999999"
                        android:background="@drawable/img_service_release_nor"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/tv_cleanup"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="打扫"
                        android:gravity="center"
                        android:layout_marginLeft="8dp"
                        android:textColor="@color/font_color_999999"
                        android:background="@drawable/img_service_release_nor"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/tv_accompany"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="陪同外出"
                        android:gravity="center"
                        android:layout_marginLeft="8dp"
                        android:textColor="@color/font_color_999999"
                        android:background="@drawable/img_service_release_nor"
                        android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_chat"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="唠嗑"
                        android:gravity="center"
                        android:textColor="@color/font_color_999999"
                        android:background="@drawable/img_service_release_nor"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/tv_look_after"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="看护"
                        android:gravity="center"
                        android:layout_marginLeft="8dp"
                        android:textColor="@color/font_color_999999"
                        android:background="@drawable/img_service_release_nor"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/tv_other"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="其他"
                        android:gravity="center"
                        android:layout_marginLeft="8dp"
                        android:textColor="@color/font_color_999999"
                        android:background="@drawable/img_service_release_nor"
                        android:layout_weight="1"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginLeft="8dp"
                        android:textColor="@color/font_color_999999"
                        android:layout_weight="1"/>
                </LinearLayout>




            </LinearLayout>
            <!--<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/release_nav_volunteer_creat"
                android:layout_marginRight="@dimen/size_17"
                android:layout_marginLeft="@dimen/size_17"
                android:layout_marginTop="@dimen/size_13"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/size_13"
                android:paddingRight="@dimen/size_13"
                android:paddingTop="@dimen/size_10"
                android:paddingBottom="@dimen/size_10"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="约定地点"
                    android:textSize="@dimen/font_16"
                    android:textColor="@color/font_color_333333"
                    />
                <EditText
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:singleLine="true"
                    android:hint="请输入..."
                    android:background="@null"
                    android:paddingTop="@dimen/size_1"
                    android:paddingBottom="@dimen/size_1"
                    android:paddingRight="@dimen/size_5"
                    android:textColorHint="@color/font_color_999999"
                    android:textSize="@dimen/font_16"
                    android:textColor="@color/font_color_999999"
                    android:gravity="right|center_vertical"
                    />
            </LinearLayout>-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:background="@drawable/release_nav_volunteer_creat"
                android:layout_marginRight="@dimen/size_17"
                android:layout_marginLeft="@dimen/size_17"
                android:layout_marginTop="@dimen/size_13"
                android:gravity="center_vertical"
                android:padding="@dimen/size_13"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="其他补充事宜"
                    android:textSize="@dimen/font_16"
                    android:textColor="@color/font_color_333333"
                    />
                <EditText
                    android:id="@+id/et_addtion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_marginTop="@dimen/size_8"
                    android:hint="请输入..."
                    android:background="@null"
                    android:paddingRight="@dimen/size_5"
                    android:textColorHint="@color/font_color_999999"
                    android:textSize="@dimen/font_16"
                    android:textColor="@color/font_color_999999"
                    />

            </LinearLayout>

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_40"
                android:background="@drawable/btn_border_volunteer_creat"
                android:layout_below="@+id/et_password"
                android:layout_centerHorizontal="true"
                android:textColor="#0e7b7b"
                android:textSize="@dimen/font_16"
                android:gravity="center"
                android:text="@string/complete"
                android:layout_marginTop="@dimen/size_20"
                android:layout_marginLeft="@dimen/height_120"
                android:layout_marginRight="@dimen/height_120"
                android:layout_marginBottom="@dimen/margin_20"
                android:onClick="onClick"
                android:layout_gravity="bottom|center_horizontal"
                />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>