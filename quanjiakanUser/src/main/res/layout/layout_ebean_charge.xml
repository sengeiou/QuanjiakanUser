<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPureWhite"
    >
    <include
        android:id="@+id/layout_title"
        layout="@layout/layout_title"
        />

    <TextView
        android:id="@+id/name"
        android:layout_below="@+id/layout_title"
        android:layout_marginTop="@dimen/margin_15"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E豆"
        android:textColor="@color/font_color_333333"
        android:textSize="@dimen/font_20"
        />

    <TextView
        android:id="@+id/value"
        android:layout_below="@+id/name"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/color_title_green"
        android:textSize="@dimen/font_20"
        />

    <RelativeLayout
        android:id="@+id/charge_line_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/value"
        android:layout_marginTop="@dimen/margin_20"
        >

        <LinearLayout
            android:id="@+id/type2"
            android:layout_width="@dimen/height_90"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/margin_5"
            android:paddingBottom="@dimen/margin_5"
            android:layout_centerHorizontal="true"
            android:background="@drawable/selecter_ebean_normal"
            >
            <TextView
                android:id="@+id/type2_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_color_333333"
                android:textSize="@dimen/font_16"
                />
            <TextView
                android:id="@+id/type2_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_color_999999"
                android:textSize="@dimen/font_10"
                />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/type1"
            android:layout_width="@dimen/height_90"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/margin_5"
            android:paddingBottom="@dimen/margin_5"
            android:layout_toLeftOf="@+id/type2"
            android:layout_marginRight="@dimen/size_15"
            android:background="@drawable/selecter_ebean_selected"
            >
            <TextView
                android:id="@+id/type1_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/font_16"
                />
            <TextView
                android:id="@+id/type1_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/font_10"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/type3"
            android:layout_width="@dimen/height_90"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/margin_5"
            android:paddingBottom="@dimen/margin_5"
            android:layout_toRightOf="@+id/type2"
            android:layout_marginLeft="@dimen/size_15"
            android:background="@drawable/selecter_ebean_normal"
            >
            <TextView
                android:id="@+id/type3_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_color_333333"
                android:textSize="@dimen/font_16"
                />
            <TextView
                android:id="@+id/type3_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_color_999999"
                android:textSize="@dimen/font_10"
                />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/charge_line_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/charge_line_1"
        android:layout_marginTop="@dimen/margin_20"
        >

        <LinearLayout
            android:id="@+id/type5"
            android:layout_width="@dimen/height_90"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/margin_5"
            android:paddingBottom="@dimen/margin_5"
            android:layout_centerHorizontal="true"
            android:background="@drawable/selecter_ebean_normal"
            >

            <TextView
                android:id="@+id/type5_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_color_333333"
                android:textSize="@dimen/font_16"
                />

            <TextView
                android:id="@+id/type5_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_color_999999"
                android:textSize="@dimen/font_10"
                />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/type4"
            android:layout_width="@dimen/height_90"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/margin_5"
            android:paddingBottom="@dimen/margin_5"
            android:layout_toLeftOf="@+id/type5"
            android:layout_marginRight="@dimen/size_15"
            android:background="@drawable/selecter_ebean_normal"
            >
            <TextView
                android:id="@+id/type4_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_color_333333"
                android:textSize="@dimen/font_16"
                />
            <TextView
                android:id="@+id/type4_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_color_999999"
                android:textSize="@dimen/font_10"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/type6"
            android:layout_width="@dimen/height_90"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/margin_5"
            android:paddingBottom="@dimen/margin_5"
            android:layout_toRightOf="@+id/type5"
            android:layout_marginLeft="@dimen/size_15"
            android:background="@drawable/selecter_ebean_normal"
            >
            <TextView
                android:id="@+id/type6_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_color_333333"
                android:textSize="@dimen/font_16"
                />
            <TextView
                android:id="@+id/type6_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_color_999999"
                android:textSize="@dimen/font_10"
                />
        </LinearLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_40"
        android:layout_below="@+id/charge_line_2"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/size_30"
        android:layout_marginRight="@dimen/size_30"
        android:layout_marginTop="@dimen/size_30"
        android:background="@drawable/selecter_solid_title_color"
        android:gravity="center"
        android:text="购买"
        android:textColor="@color/white"
        android:textSize="@dimen/font_18"
        />

    <LinearLayout
        android:id="@+id/signup_clause_line"
        android:layout_below="@id/btn_submit"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_marginLeft="@dimen/size_22"
        android:layout_marginRight="@dimen/size_22"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:id="@+id/ll_signup_clause_ck"
            android:layout_width="@dimen/height_35"
            android:layout_height="@dimen/height_35"
            >

            <View
                android:id="@+id/signup_clause_ck"
                android:layout_width="@dimen/height_15"
                android:layout_height="@dimen/height_15"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_10"
                android:background="@drawable/doctor_pay_list_light"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/signup_clause_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="我已阅读并同意《用户充值协议》"
            android:textSize="@dimen/font_10"
            />
    </LinearLayout>
    

</RelativeLayout>