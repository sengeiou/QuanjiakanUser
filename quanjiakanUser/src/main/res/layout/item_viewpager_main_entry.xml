<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_95"
    android:background="@color/colorPureWhite"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/pager_item1"
        android:layout_width="@dimen/size_0"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/pager_item1_icon"
            android:layout_width="@dimen/height_55"
            android:layout_height="@dimen/height_55"
            android:layout_marginBottom="@dimen/size_10"
            android:layout_marginTop="@dimen/size_8"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/professor" />

        <TextView
            android:id="@+id/pager_item1_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/view_pager_string1_professer"
            android:textColor="@color/colorAlphaBlack_BB"
            android:textSize="@dimen/font_14"
            android:layout_marginBottom="@dimen/size_5"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/pager_item2"
        android:layout_width="@dimen/size_0"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/pager_item2_icon"
            android:layout_width="@dimen/height_55"
            android:layout_height="@dimen/height_55"
            android:layout_marginBottom="@dimen/size_10"
            android:layout_marginTop="@dimen/size_8"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/doctors" />

        <TextView
            android:id="@+id/pager_item2_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/view_pager_string2_doctors"
            android:textColor="@color/colorAlphaBlack_BB"
            android:textSize="@dimen/font_14"
            android:layout_marginBottom="@dimen/size_5"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/pager_item3"
        android:layout_width="@dimen/size_0"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/pager_item3_icon"
            android:layout_width="@dimen/height_55"
            android:layout_height="@dimen/height_55"
            android:layout_marginBottom="@dimen/size_10"
            android:layout_marginTop="@dimen/size_8"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/yao" />

        <TextView
            android:id="@+id/pager_item3_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/view_pager_string3_yao"
            android:textColor="@color/colorAlphaBlack_BB"
            android:textSize="@dimen/font_14"
            android:layout_marginBottom="@dimen/size_5"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/pager_item4"
        android:layout_width="@dimen/size_0"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/pager_item4_icon"
            android:layout_width="@dimen/height_55"
            android:layout_height="@dimen/height_55"
            android:layout_marginBottom="@dimen/size_10"
            android:layout_marginTop="@dimen/size_8"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/familyservice" />

        <TextView
            android:id="@+id/pager_item4_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/view_pager_string4_familyservice"
            android:textColor="@color/colorAlphaBlack_BB"
            android:textSize="@dimen/font_14"
            android:layout_marginBottom="@dimen/size_5"
            />
    </LinearLayout>
</LinearLayout>
