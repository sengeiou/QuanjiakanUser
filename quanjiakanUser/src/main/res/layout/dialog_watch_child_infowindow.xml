<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingBottom="@dimen/size_10">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/position_icon_nav_nor"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/margin_5">

        <RelativeLayout
            android:layout_width="@dimen/height_150"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/size_5">

            <TextView
                android:id="@+id/info_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/size_5"
                android:ems="10"
                android:gravity="center"
                android:text="111111111111111111111111111111111111111111111"
                android:textColor="@color/font_color_333333"
                android:textSize="@dimen/font_14" />

            <LinearLayout
                android:id="@+id/phone_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_25"
                android:layout_below="@id/info_location"
                android:layout_marginLeft="@dimen/size_5"
                android:layout_marginTop="@dimen/size_10"
                android:layout_marginBottom="@dimen/size_10"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/size_5"
                    android:layout_weight="1"
                    android:text="电话:18520132540"
                    android:textColor="@color/font_color_333333"
                    android:textSize="@dimen/font_14" />

                <ImageView
                    android:id="@+id/call_phone"
                    android:layout_width="@dimen/size_20"
                    android:layout_height="@dimen/size_20"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/index_icon_call" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:id="@+id/div"
            android:layout_width="@dimen/size_1p"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/size_5"
            android:background="@color/font_color_CCCCCC" />

        <LinearLayout
            android:id="@+id/guide_line"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/guide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/size_5"
                android:src="@drawable/index_icon_navigation_nor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="导航"
                android:textColor="#169E4F"
                android:textSize="@dimen/font_10" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
