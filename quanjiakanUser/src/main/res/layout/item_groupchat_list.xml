<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/margin_10"
    android:paddingBottom="@dimen/margin_10"
    android:background="@color/white"
    >
    <ImageView 
        android:id="@+id/item_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/message_group_ico_nor"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/item_header"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_15"
        android:textColor="@color/qianhei"
        android:text="2016-10-10 18:00"
        />
    
    
    <TextView
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_toRightOf="@+id/item_header"
        android:layout_alignTop="@+id/item_header"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_marginRight="@dimen/margin_10"
        android:text="群123458"
        android:layout_centerVertical="true"
        android:textColor="@color/font_color_333333"
        android:textSize="@dimen/font_18"
        android:layout_marginLeft="@dimen/size_8"
        />


    <TextView
        android:id="@+id/tv_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_name"
        android:layout_centerVertical="true"
        android:textSize="@dimen/font_18"
        android:textColor="@color/font_color_333333"
        android:text="("/>


    <TextView
        android:id="@+id/item_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_left"
        android:layout_centerVertical="true"
        android:textSize="@dimen/font_18"
        android:textColor="@color/font_color_333333"
        android:text="2人"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_number"
        android:layout_centerVertical="true"
        android:textSize="@dimen/font_18"
        android:textColor="@color/font_color_333333"
        android:text=")"/>









