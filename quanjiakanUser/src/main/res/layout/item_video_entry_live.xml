<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_248">
    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_200"
            android:src="@color/colorAlphaBlack_33"
            android:scaleType="fitCenter"
            />
        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_15"
            android:background="@drawable/round_video_entry_live"
            android:drawableLeft="@drawable/icon_live_ing"
            android:drawablePadding="@dimen/size_5"
            android:paddingTop="@dimen/size_5"
            android:paddingBottom="@dimen/size_5"
            android:paddingLeft="@dimen/size_10"
            android:paddingRight="@dimen/size_10"
            android:text="直播中"
            android:textColor="@color/white"
            android:textSize="@dimen/font_16" />

        <TextView
            android:id="@+id/title_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/image"
            android:layout_alignLeft="@+id/image"
            android:layout_margin="@dimen/size_15"
            android:singleLine="true"
            android:text="直播标题栏"
            android:textColor="@color/white"
            android:textSize="@dimen/font_16" />

        <RelativeLayout
            android:id="@+id/info_line"
            android:layout_below="@+id/image"
            android:layout_alignLeft="@id/image"
            android:layout_alignRight="@id/image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_48">

            <ImageView
                android:id="@+id/header"
                android:layout_width="@dimen/size_40"
                android:layout_height="@dimen/size_40"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/size_15"
                android:src="@drawable/ic_patient" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_marginTop="@dimen/size_2"
                android:layout_toRightOf="@+id/header"
                android:layout_alignTop="@+id/header"
                android:singleLine="true"
                android:text="张果果"
                android:textColor="@color/font_color_333333"
                android:textSize="@dimen/font_14" />

            <TextView
                android:id="@+id/viewer_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_15"
                android:drawableLeft="@drawable/login_username"
                android:drawablePadding="@dimen/margin_5"
                android:layout_alignLeft="@+id/name"
                android:layout_below="@+id/name"
                android:layout_marginTop="@dimen/size_5"
                android:text="999"
                android:textColor="@color/font_color_999999"
                android:textSize="@dimen/font_14" />

            <ImageView
                android:id="@+id/concern"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/margin_5"
                android:paddingRight="@dimen/margin_5"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:layout_marginLeft="@dimen/margin_5"
                android:layout_marginRight="@dimen/margin_10"
                android:src="@drawable/icon_focus_on_nor"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>