<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/fl_sleep"
        android:layout_width="210dp"
        android:layout_height="210dp"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/health_ring_background"/>

        <ImageView
            android:id="@+id/iv_background"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:src="@drawable/health_ring_nor"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当天睡眠"
                android:layout_gravity="center"
                android:layout_marginTop="45dp"
                android:textSize="16sp"
                android:textColor="@color/color_countTextColor"/>

            <RelativeLayout
                android:id="@+id/rl_sleep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="18dp">

                <TextView
                    android:id="@+id/tv_heartrate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8"
                    android:textColor="@color/step_current"
                    android:textSize="34sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_heartrate"
                    android:layout_alignBottom="@+id/tv_heartrate"
                    android:textSize="17sp"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="2dp"
                    android:textColor="@color/step_current"
                    android:text="小时"/>



            </RelativeLayout>

            <TextView
                android:id="@+id/tv_sleep_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:textColor="@color/step_current"
                android:text="有效睡眠"/>

        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/ll_sleep_time"
        android:layout_below="@+id/fl_sleep"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_00b2b2"
                android:textSize="18sp"
                android:layout_gravity="end"
                android:layout_marginRight="25dp"
                android:text="22:30"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_00b2b2"
                android:textSize="18sp"
                android:layout_gravity="end"
                android:layout_marginRight="15dp"
                android:text="入睡时间"/>

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/divider_line"
            android:layout_gravity="center_horizontal"
            />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_00b2b2"
                android:textSize="18sp"
                android:layout_marginLeft="25dp"
                android:text="22:30"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_00b2b2"
                android:textSize="18sp"
                android:layout_marginLeft="15dp"
                android:text="睡醒时间"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/ll_sleep_time"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sleep_ico_light"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="浅睡"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/color_countTextColor"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4小时20分"
                    android:layout_marginTop="4dp"
                    android:textSize="18sp"
                    android:textColor="@color/font_color_999999"
                    android:layout_gravity="center"/>


            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/sleep_ico_deep" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="浅睡"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/color_countTextColor"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4小时20分"
                    android:layout_marginTop="4dp"
                    android:textSize="18sp"
                    android:textColor="@color/font_color_999999"
                    android:layout_gravity="center"/>


            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sleep_ico_sober"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="清醒"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/color_countTextColor"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0分钟"
                    android:layout_marginTop="4dp"
                    android:textSize="18sp"
                    android:textColor="@color/font_color_999999"
                    android:layout_gravity="center"/>


            </LinearLayout>

        </LinearLayout>






    </LinearLayout>



</RelativeLayout>