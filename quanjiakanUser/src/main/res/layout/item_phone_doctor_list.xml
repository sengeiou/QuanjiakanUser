<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin_15"
        android:layout_marginLeft="@dimen/margin_15"
        android:background="@drawable/selecter_inquiry_green"
        android:paddingBottom="@dimen/size_8"
        android:paddingTop="@dimen/size_8"
        android:paddingLeft="@dimen/margin_15"
        android:paddingRight="@dimen/margin_15"
        android:text="已订购"
        android:textColor="@color/colorPureWhite"
        android:textSize="@dimen/font_16" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/height_70"
        android:layout_height="@dimen/height_70"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_15"
        android:src="@drawable/doctor_phone" />


    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_8"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_toRightOf="@+id/image"
        android:singleLine="true"
        android:text="电话医生"
        android:textColor="@color/hei222"
        android:textSize="@dimen/font_15" />

    <TextView
        android:id="@+id/tv_clinic_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_8"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_toRightOf="@+id/tv_name"
        android:background="@drawable/shape_tags_maincolor"
        android:paddingBottom="@dimen/size_3"
        android:paddingLeft="@dimen/size_10"
        android:paddingRight="@dimen/size_10"
        android:paddingTop="@dimen/size_3"
        android:text="@string/phone_docter_function"
        android:textColor="@color/maincolor"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/tv_charge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_name"
        android:layout_toLeftOf="@id/status"
        android:layout_below="@+id/tv_name"
        android:layout_marginTop="@dimen/size_8"
        android:text="服务费用：199/年"
        android:textColor="@color/hei"
        android:textSize="@dimen/font_14" />

    <TextView
        android:id="@+id/tv_starttime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_charge"
        android:layout_toLeftOf="@id/status"
        android:layout_below="@+id/tv_charge"
        android:layout_marginTop="@dimen/size_5"
        android:text="订购时间:"
        android:textColor="@color/qianhei"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/end_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_charge"
        android:layout_below="@+id/tv_starttime"
        android:layout_toLeftOf="@id/status"
        android:layout_marginBottom="@dimen/margin_10"
        android:layout_marginTop="@dimen/size_5"
        android:text="订购时间:"
        android:textColor="@color/qianhei"
        android:textSize="14sp" />

</RelativeLayout>