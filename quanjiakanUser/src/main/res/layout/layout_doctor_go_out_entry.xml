<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_color">

    <include
        android:id="@+id/layout_title"
        layout="@layout/layout_title" />

    <TextView
        android:id="@+id/order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin_20"
        android:background="@drawable/selecter_hollow_green_transport"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/margin_10"
        android:paddingLeft="@dimen/margin_30"
        android:paddingRight="@dimen/margin_30"
        android:paddingTop="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_5"
        android:text="@string/docter_out_go_service_order_now"
        android:textColor="@color/color_title_green"
        android:textSize="@dimen/font_18" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/order"
        android:layout_below="@+id/layout_title">

        <LinearLayout
            android:id="@+id/layout_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_160"
                android:src="@drawable/banner_out_go"
                android:layout_gravity="center_horizontal"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上门问诊"
                    android:textColor="@color/font_color_333333"
                    android:textSize="@dimen/font_18"
                    android:layout_margin="@dimen/margin_10"
                    />
                <TextView
                    android:id="@+id/info_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200人已购买"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/margin_10"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="服务类型:"
                    android:textColor="@color/font_color_333333"
                    android:textSize="@dimen/font_16"
                    android:layout_margin="@dimen/margin_10"
                    />
                <TextView
                    android:id="@+id/type_hurry"
                    android:layout_toRightOf="@+id/type"
                    android:layout_alignBottom="@id/type"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selecter_inquiry_red"
                    android:text="急"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_16"
                    android:paddingTop="@dimen/size_2"
                    android:paddingBottom="@dimen/size_2"
                    android:paddingLeft="@dimen/size_5"
                    android:paddingRight="@dimen/size_5"
                    />
                <TextView
                    android:id="@+id/type_hurry_name"
                    android:layout_toRightOf="@+id/type_hurry"
                    android:layout_alignBottom="@id/type_hurry"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="立刻上门"
                    android:textColor="@color/font_color_999999"
                    android:textSize="@dimen/font_16"
                    android:padding="@dimen/size_2"
                    />

                <TextView
                    android:id="@+id/info_line_type_hurry_go_out_memory"
                    android:layout_toRightOf="@+id/type_hurry_name"
                    android:layout_alignTop="@id/type_hurry_name"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="150/次"
                    android:textColor="@color/red_f"
                    android:textSize="@dimen/font_16"
                    android:padding="@dimen/size_2"
                    />
                <!-- ********************************************* -->
                <TextView
                    android:id="@+id/type_normal"
                    android:layout_below="@id/info_line_type_hurry_go_out_memory"
                    android:layout_alignLeft="@id/type_hurry"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selecter_inquiry_green"
                    android:text="缓"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_16"
                    android:paddingTop="@dimen/size_2"
                    android:paddingBottom="@dimen/size_2"
                    android:paddingLeft="@dimen/size_5"
                    android:paddingRight="@dimen/size_5"
                    />
                <TextView
                    android:id="@+id/type_normal_name"
                    android:layout_toRightOf="@+id/type_normal"
                    android:layout_alignBottom="@id/type_normal"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预约上门"
                    android:textColor="@color/font_color_999999"
                    android:textSize="@dimen/font_16"
                    android:padding="@dimen/size_2"
                    />

                <TextView
                    android:id="@+id/info_line_type_normal_go_out_memory"
                    android:layout_toRightOf="@+id/type_normal_name"
                    android:layout_alignTop="@id/type_normal_name"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100/次"
                    android:textColor="@color/red_f"
                    android:textSize="@dimen/font_16"
                    android:padding="@dimen/size_2"
                    />

            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_5"
                android:layout_marginBottom="@dimen/margin_10"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="服务范围:"
                    android:textColor="@color/font_color_333333"
                    android:textSize="@dimen/font_16"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_marginRight="@dimen/margin_10"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginRight="@dimen/margin_10"
                    android:text="慢病管理、医护服务、母婴倍护、康复保健"
                    android:textColor="@color/font_color_999999"
                    android:textSize="@dimen/font_16"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/main_bg_color"
                >
                <LinearLayout
                    android:id="@+id/layout_introduce"
                    android:layout_width="@dimen/size_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/layout_introduce_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_10"
                        android:text="服务介绍"
                        android:textColor="@color/font_color_333333"
                        android:textSize="@dimen/font_18"
                        android:layout_gravity="center"
                        />
                    <View
                        android:id="@+id/layout_introduce_line"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_1"
                        android:background="@color/color_title_green"
                        android:layout_marginLeft="@dimen/margin_20"
                        android:layout_marginRight="@dimen/margin_20"
                        />
                </LinearLayout>
                <View
                    android:layout_width="@dimen/size_1"
                    android:layout_height="@dimen/height_30"
                    android:background="@color/colorAlphaBlack_33"
                    android:layout_gravity="center_vertical"
                    />
                <LinearLayout
                    android:id="@+id/layout_order"
                    android:layout_width="@dimen/size_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/layout_order_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_10"
                        android:text="下单流程"
                        android:textColor="@color/font_color_333333"
                        android:textSize="@dimen/font_18"
                        android:layout_gravity="center"
                        />
                    <View
                        android:id="@+id/layout_order_line"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_1"
                        android:background="@color/color_title_green"
                        android:layout_marginLeft="@dimen/margin_20"
                        android:layout_marginRight="@dimen/margin_20"
                        />
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_1"
                android:background="@color/colorAlphaBlack_33"
                />
            <TextView
                android:id="@+id/infomation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_10"
                android:textColor="@color/font_color_999999"
                android:textSize="@dimen/font_16"
                android:text="问诊
量血压、心肺听诊、测血糖、
报告解读、用药指导、康复指导
健康数据分析、饮食指导、生活习惯指导
 与疾病相关的体格检查、运动指导、病情分析等全方位医疗服务
"
                />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>	