<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ly_myinfo_changeaddress"
    android:layout_width="@dimen/height_300"
    android:layout_gravity="center"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_line"
        android:layout_width="@dimen/height_300"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_27"
        android:layout_marginRight="@dimen/margin_27"
        android:background="@drawable/bg_dialog_selector"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size_15"
            android:gravity="center_vertical"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/black"
            android:text="紧急通知"
            android:textSize="@dimen/font_18"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_15"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginBottom="@dimen/size_15"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/font_color_333333"
                android:textSize="@dimen/font_18"

                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1p"
            android:background="@color/font_color_BBBBBB"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_33"
            >

            <TextView
                android:id="@+id/btn_confirm"
                android:layout_width="@dimen/height_77"
                android:layout_height="@dimen/height_33"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_15"
                android:gravity="center"
                android:text="忽略"
                android:textSize="@dimen/font_16"
                android:layout_weight="1"
                />
            <View
                android:layout_width="@dimen/size_1p"
                android:layout_height="@dimen/height_33"
                android:background="@color/font_color_BBBBBB"
                />
            <TextView
                android:id="@+id/btn_cancel"
                android:layout_width="@dimen/height_77"
                android:layout_height="@dimen/height_33"
                android:layout_toLeftOf="@+id/btn_confirm"
                android:gravity="center"
                android:text="前往"
                android:textSize="@dimen/font_16"
                android:layout_weight="1"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>