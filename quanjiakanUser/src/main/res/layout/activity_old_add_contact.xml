<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <include
        android:id="@+id/title"
        layout="@layout/layout_title" />


    <RelativeLayout
        android:id="@+id/rlt_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginTop="@dimen/size_18">

        <LinearLayout
            android:id="@+id/llt_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_20"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView

                android:id="@+id/image1"
                android:layout_width="@dimen/size_65"
                android:layout_height="@dimen/size_65" />

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_6"
                android:text="儿子"
                android:textColor="@color/font_color_333333"
                android:textSize="@dimen/size_18" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llt_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView

                android:id="@+id/image2"
                android:layout_width="@dimen/size_65"
                android:layout_height="@dimen/size_65"

                />

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_6"
                android:text="儿媳"
                android:textColor="@color/font_color_333333"
                android:textSize="@dimen/size_18" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llt_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/size_20"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView

                android:id="@+id/image3"
                android:layout_width="@dimen/size_65"
                android:layout_height="@dimen/size_65"

                />

            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_6"
                android:text="女儿"
                android:textColor="@color/font_color_333333"
                android:textSize="@dimen/size_18" />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlt_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rlt_1"
        android:layout_marginTop="@dimen/size_30">

        <LinearLayout
            android:id="@+id/llt_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_20"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView

                android:id="@+id/image4"
                android:layout_width="@dimen/size_65"
                android:layout_height="@dimen/size_65"

                />

            <TextView
                android:id="@+id/text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_6"
                android:text="女婿"
                android:textColor="@color/font_color_333333"
                android:textSize="@dimen/size_18" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llt_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView

                android:id="@+id/image5"
                android:layout_width="@dimen/size_65"
                android:layout_height="@dimen/size_65"

                />

            <TextView
                android:id="@+id/text5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_6"
                android:text="自定义"
                android:textColor="@color/font_color_333333"
                android:textSize="@dimen/size_18" />
        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/llt_pinglun"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#fafafa">

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#bbbbbb" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/divider"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_diy"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/size_5"
                android:layout_marginRight="@dimen/size_5"
                android:layout_weight="1"
                android:background="@drawable/shape_bar_pinglun"
                android:gravity="center_vertical"
                android:hint="自定义"
                android:paddingLeft="5dp"
                android:textColor="@color/font_color_999999"
                android:textSize="16sp" />
            />

            <TextView
                android:id="@+id/tv_sure"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/shape_bar_pinglun"
                android:gravity="center"
                android:textSize="14sp"
                android:text="确定" />
        </LinearLayout>
    </RelativeLayout>


    <Button
        android:id="@+id/btn_next"
        android:layout_width="@dimen/height_270"
        android:layout_height="@dimen/size_40"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/size_22"
        android:background="@drawable/selecter_btn_bac_green"
        android:text="下一步"
        android:textColor="@color/color_btn_green" />

</RelativeLayout>