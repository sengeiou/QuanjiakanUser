<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >



    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/switch_bg_pic"
                    android:scaleType="fitXY"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_title_bar_height"
                    android:background="@color/transparent" >

                    <ImageButton
                        android:id="@+id/ibtn_back"
                        android:layout_width="@dimen/common_title_bar_height"
                        android:layout_height="@dimen/common_title_bar_height"
                        android:layout_alignParentBottom="true"
                        android:background="@color/transparent"
                        android:src="@drawable/back"
                        android:visibility="invisible"
                        android:scaleType="centerInside"
                        />

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/common_title_bar_height"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:gravity="center_vertical"
                        android:text="Title"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_big" />

                    <ImageButton
                        android:id="@+id/ibtn_menu"
                        android:layout_width="@dimen/common_title_bar_height"
                        android:layout_height="@dimen/common_title_bar_height"
                        android:scaleType="centerInside"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:visibility="gone"
                        android:background="@color/transparent" />

                    <TextView
                        android:id="@+id/menu_text"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/common_title_bar_height"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:text="添加添加"
                        android:textSize="@dimen/font_16"
                        android:textColor="@color/white"
                        android:layout_marginRight="@dimen/margin_10"
                        android:gravity="right|center_vertical"
                        android:visibility="gone"
                        />

                </RelativeLayout>


            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                >

                <RelativeLayout
                    android:id="@+id/rlt_button"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_40"
                    android:layout_marginLeft="@dimen/size_20"
                    android:layout_marginRight="@dimen/size_20"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="定制开关机"
                        android:textColor="@color/font_color_333333"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/font_16"
                        />

                    <ToggleButton
                        android:id="@+id/btn_open_close"
                        android:layout_width="@dimen/size_45"
                        android:layout_height="@dimen/size_25"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/edit_btn_close"
                        android:textOn=""
                        android:textOff=""
                        android:checked="false"
                        android:layout_centerVertical="true"
                        />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/font_color_EEEEEE"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlt_open_time"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_40"
                    android:layout_marginLeft="@dimen/size_20"
                    android:layout_marginRight="@dimen/size_20"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="手表开机时间"
                        android:textColor="@color/font_color_333333"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/font_16"
                        />

                    <ImageView
                        android:id="@+id/iv_more_open"
                        android:layout_width="@dimen/size_8"
                        android:layout_height="@dimen/size_15"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/edit_ico_more"
                        android:layout_centerVertical="true"
                        />

                    <TextView
                        android:id="@+id/tv_show_open"
                        android:layout_toLeftOf="@id/iv_more_open"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/size_11"
                        android:textColor="@color/font_color_666666"
                        android:textSize="@dimen/font_14"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/font_color_EEEEEE"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlt_close_time"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_40"
                    android:layout_marginLeft="@dimen/size_20"
                    android:layout_marginRight="@dimen/size_20"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="手表关机时间"
                        android:textColor="@color/font_color_333333"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/font_16"
                        />

                    <ImageView
                        android:id="@+id/iv_more_close"
                        android:layout_width="@dimen/size_8"
                        android:layout_height="@dimen/size_15"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/edit_ico_more"
                        android:layout_centerVertical="true"
                        />

                    <TextView
                        android:id="@+id/tv_show_close"
                        android:layout_toLeftOf="@id/iv_more_close"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/size_11"
                        android:textColor="@color/font_color_666666"
                        android:textSize="@dimen/font_14"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/font_color_EEEEEE"
                        />
                </RelativeLayout>


            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_20"
                    android:text="注:充电时,手表会一直保持开机状态,定时开关机不会生效"
                    android:layout_marginTop="@dimen/size_10"
                    android:textSize="@dimen/font_12"
                    android:textColor="@color/font_color_999999"
                    android:visibility="gone"
                    />

                <LinearLayout
                    android:id="@+id/llt_set_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >


                        <TextView
                            android:id="@+id/tv_share_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/margin_15"
                            android:layout_marginTop="@dimen/margin_18"
                            android:layout_gravity="center_horizontal"
                            android:layout_centerHorizontal="true"
                            android:text="手表开机时间"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_18" />


                        <TextView
                            android:id="@+id/btn_sure"
                            android:layout_width="@dimen/height_60"
                            android:layout_height="@dimen/height_30"
                            android:layout_alignParentRight="true"
                            android:text="完成"
                            android:textColor="#5188CB"
                            android:gravity="center"
                            android:layout_centerVertical="true"
                            android:textSize="@dimen/font_12" />

                        <TextView
                            android:id="@+id/btn_cancel"
                            android:layout_width="@dimen/height_60"
                            android:layout_height="@dimen/height_30"
                            android:layout_alignParentLeft="true"
                            android:text="@string/cancel"
                            android:textColor="#5188CB"
                            android:gravity="center"
                            android:layout_centerVertical="true"
                            android:textSize="@dimen/font_12" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_35"
                            android:layout_centerInParent="true"
                            >

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_alignParentTop="true"
                                android:background="@color/font_color_999999"
                                />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_alignParentBottom="true"
                                android:background="@color/font_color_999999"
                                />

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginLeft="@dimen/margin_100"
                            android:layout_marginRight="@dimen/margin_100"
                            android:gravity="center_vertical">

                            <com.quanjiakanuser.widget.WheelView
                                android:id="@+id/wv_am_pm"
                                android:layout_width="@dimen/size_0"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                />
                            <com.quanjiakanuser.widget.WheelView
                                android:id="@+id/wv_hour"
                                android:layout_width="@dimen/size_0"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                />

                            <com.quanjiakanuser.widget.WheelView
                                android:id="@+id/wv_minute"
                                android:layout_width="@dimen/size_0"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                />
                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>



            </FrameLayout>



        </LinearLayout>


    </ScrollView>





</LinearLayout>