<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ly_myinfo_changeaddress"
    android:layout_width="@dimen/height_300"
    android:layout_gravity="center"
    android:layout_height="wrap_content"
    android:background="@drawable/selecter_white_round_10"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_line"
        android:layout_width="@dimen/height_300"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_dialog_selector"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size_15"
                android:layout_marginLeft="@dimen/margin_18"
                android:layout_marginTop="@dimen/margin_18"
                android:layout_centerInParent="true"
                android:text="温馨提示"
                android:textSize="@dimen/font_20"
                android:textColor="@color/font_color_333333"
                />

            <ImageView
                android:id="@+id/exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/crop__ic_cancel"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_15"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text="您暂未绑定手表设备,立即前往绑定全家康手表设备"
                />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_15"
            android:layout_marginTop="@dimen/margin_15" >

            <TextView
                android:id="@+id/btn_confirm"
                android:layout_width="@dimen/height_150"
                android:layout_height="@dimen/height_40"
                android:layout_marginRight="@dimen/margin_15"
                android:gravity="center"
                android:text="立即绑定"
                android:textSize="@dimen/font_16"
                android:textColor="@color/color_00b2b2"
                android:background="@drawable/selecter_hollow_transport_0e7b7b"
                android:layout_centerHorizontal="true"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_below="@id/btn_confirm"
                android:layout_marginTop="@dimen/size_11"
                >
                <CheckBox
                    android:id="@+id/check_status"
                    android:layout_alignLeft="@id/btn_confirm"
                    android:layout_width="@dimen/height_20"
                    android:layout_height="@dimen/height_20"
                    android:padding="@dimen/size_2"
                    android:background="@drawable/selecter_map_entry_dialog"
                    android:button="@null"
                    android:checked="false"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="不再提醒"
                    android:textSize="@dimen/font_16"
                    android:layout_alignTop="@id/check_status"
                    android:layout_toRightOf="@id/check_status"
                    android:layout_marginLeft="@dimen/size_5"
                    />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>