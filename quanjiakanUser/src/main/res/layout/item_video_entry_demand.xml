<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <View
        android:id="@+id/divider_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_5"
        android:background="@color/colorAlphaBlack_33"
        />
    <RelativeLayout
        android:id="@+id/info_line"
        android:layout_alignLeft="@id/image"
        android:layout_alignRight="@id/image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_48">

        <ImageView
            android:id="@+id/header"
            android:layout_width="@dimen/size_40"
            android:layout_height="@dimen/size_40"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size_15"
            />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_toRightOf="@+id/header"
            android:layout_alignTop="@+id/header"
            android:singleLine="true"
            android:textColor="@color/font_color_333333"
            android:textSize="@dimen/font_14" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_toRightOf="@+id/header"
            android:layout_alignBottom="@+id/header"
            android:singleLine="true"
            android:text="11-26 16:20"
            android:textColor="@color/font_color_999999"
            android:textSize="@dimen/font_14"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/font_color_333333"
        android:textSize="@dimen/font_14"
        android:paddingTop="@dimen/size_10"
        android:paddingBottom="@dimen/size_10"
        android:paddingLeft="@dimen/size_15"
        android:paddingRight="@dimen/size_15"
        android:lineSpacingExtra="@dimen/size_5"
        />
    <RelativeLayout
        android:id="@+id/image_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_10"
        >
        <ImageView
            android:id="@+id/video_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_150"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_launcher"
            />
        <ImageView
            android:id="@+id/video_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            android:src="@drawable/icon_streaming_play"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/number_line"
        android:layout_below="@+id/image"
        android:layout_alignLeft="@id/image"
        android:layout_alignRight="@id/image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_48">

        <TextView
            android:id="@+id/depraise_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_15"
            android:layout_alignParentRight="true"
            android:drawableLeft="@drawable/icon_homepage_post_comment"
            android:drawablePadding="@dimen/margin_5"
            android:text="999"
            android:textColor="@color/font_color_999999"
            android:textSize="@dimen/font_14"
            android:background="@drawable/round_video_entry_demand"
            android:paddingTop="@dimen/size_5"
            android:paddingBottom="@dimen/size_5"
            android:paddingRight="@dimen/size_15"
            android:paddingLeft="@dimen/size_15"
            />

        <TextView
            android:id="@+id/praise_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/depraise_number"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_15"
            android:drawableLeft="@drawable/icon_streaming_like_sel"
            android:drawablePadding="@dimen/margin_5"
            android:text="999"
            android:textColor="@color/font_color_999999"
            android:textSize="@dimen/font_14"
            android:background="@drawable/round_video_entry_demand"
            android:paddingTop="@dimen/size_5"
            android:paddingBottom="@dimen/size_5"
            android:paddingRight="@dimen/size_15"
            android:paddingLeft="@dimen/size_15"
            />


        <TextView
            android:id="@+id/number_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_toLeftOf="@+id/depraise_number"
            android:layout_alignParentLeft="true"
            android:singleLine="true"
            android:text="3357人浏览"
            android:textColor="@color/font_color_333333"
            android:textSize="@dimen/font_14"
            />
    </RelativeLayout>

</LinearLayout>