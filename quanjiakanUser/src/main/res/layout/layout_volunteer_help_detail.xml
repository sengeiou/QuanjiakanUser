<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_color"
    >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_bg_color"
        >

        <include
            android:id="@+id/title"
            layout="@layout/layout_title" />

        <RelativeLayout
            android:id="@+id/head"
            android:layout_below="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            >

            <ImageView
                android:id="@+id/image"
                android:layout_width="@dimen/height_100"
                android:layout_height="@dimen/height_100"
                android:src="@drawable/ic_launcher"
                android:layout_marginTop="@dimen/size_13"
                android:layout_centerHorizontal="true"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image"
                android:layout_marginTop="@dimen/size_15"
                android:layout_marginBottom="@dimen/size_20"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                >

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="服务站名称"
                    android:textColor="@color/font_color_333333"
                    android:textSize="@dimen/font_16"
                    />

                <TextView
                    android:id="@+id/help_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selecter_inquiry_green"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:padding="@dimen/size_3"
                    android:text="急助"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_10"
                    android:layout_marginLeft="@dimen/margin_10"
                    />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/info"
            android:layout_below="@+id/head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="求助者:"
                    android:textColor="@color/font_color_999999"
                    android:textSize="@dimen/font_16"
                    android:layout_marginRight="@dimen/margin_10"
                    android:layout_marginLeft="@dimen/size_17"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginBottom="@dimen/margin_10"
                    />
                <TextView
                    android:id="@+id/person"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="服务站名称"
                    android:textColor="@color/font_color_333333"
                    android:textSize="@dimen/font_16"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:layout_marginRight="@dimen/margin_10"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="求助事项:"
                    android:textColor="@color/font_color_999999"
                    android:textSize="@dimen/font_16"
                    android:layout_marginRight="@dimen/margin_10"
                    android:layout_marginLeft="@dimen/size_17"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginBottom="@dimen/margin_10"
                    />
                <TextView
                    android:id="@+id/thing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="服务站名称"
                    android:textColor="@color/font_color_333333"
                    android:textSize="@dimen/font_16"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:layout_marginRight="@dimen/margin_10"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="求助原因:"
                    android:textColor="@color/font_color_999999"
                    android:textSize="@dimen/font_16"
                    android:layout_marginRight="@dimen/margin_10"
                    android:layout_marginLeft="@dimen/size_17"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginBottom="@dimen/margin_10"
                    />
                <TextView
                    android:id="@+id/reason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="服务站名称"
                    android:textColor="@color/font_color_333333"
                    android:textSize="@dimen/font_16"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:layout_marginRight="@dimen/margin_10"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="约定时间:"
                    android:textColor="@color/font_color_999999"
                    android:textSize="@dimen/font_16"
                    android:layout_marginRight="@dimen/margin_10"
                    android:layout_marginLeft="@dimen/size_17"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginBottom="@dimen/margin_10"
                    />
                <TextView
                    android:id="@+id/time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="服务站名称"
                    android:textColor="@color/font_color_333333"
                    android:textSize="@dimen/font_16"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:layout_marginRight="@dimen/margin_10"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="约定地点:"
                    android:textColor="@color/font_color_999999"
                    android:textSize="@dimen/font_16"
                    android:layout_marginRight="@dimen/margin_10"
                    android:layout_marginLeft="@dimen/size_17"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginBottom="@dimen/margin_10"
                    />
                <TextView
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="服务站名称"
                    android:textColor="@color/font_color_333333"
                    android:textSize="@dimen/font_16"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:layout_marginRight="@dimen/margin_10"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="其他补充信息:"
                    android:textColor="@color/font_color_999999"
                    android:textSize="@dimen/font_16"
                    android:layout_marginRight="@dimen/margin_10"
                    android:layout_marginLeft="@dimen/size_17"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginBottom="@dimen/margin_10"
                    />
                <TextView
                    android:id="@+id/other_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="服务站名称"
                    android:textColor="@color/font_color_333333"
                    android:textSize="@dimen/font_16"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:layout_marginRight="@dimen/margin_10"
                    android:layout_marginLeft="@dimen/size_17"
                    />
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_below="@+id/info"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1p"
            android:background="@color/font_color_DDDDDD"
            />

        <Button
            android:id="@+id/call"
            android:layout_width="@dimen/height_120"
            android:layout_height="@dimen/height_40"
            android:background="@drawable/selecter_hollow_transport_0e7b7b"
            android:layout_below="@id/info"
            android:layout_centerHorizontal="true"
            android:textColor="@color/font_color_0e7b7b"
            android:textSize="@dimen/font_16"
            android:gravity="center"
            android:text="@string/cancel"
            android:padding="@dimen/margin_10"
            android:layout_marginTop="@dimen/size_35"
            />
    </RelativeLayout>
</ScrollView>