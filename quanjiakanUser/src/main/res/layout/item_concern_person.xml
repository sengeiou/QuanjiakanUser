<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_65"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/header"
        android:layout_width="@dimen/height_40"
        android:layout_height="@dimen/height_40"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginTop="@dimen/size_10"
        android:layout_marginBottom="@dimen/size_10"
        android:src="@drawable/ic_launcher"
        android:layout_centerVertical="true"
        />
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/header"
        android:layout_toRightOf="@+id/header"
        android:layout_marginLeft="@dimen/size_12"
        android:layout_marginTop="@dimen/size_3"
        android:text="名称"
        android:textColor="@color/font_color_333333"
        android:textSize="@dimen/font_14"
        />
    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/name"
        android:layout_alignBottom="@+id/name"
        android:layout_marginLeft="@dimen/margin_10"
        android:drawableLeft="@drawable/icon_common_dot"
        android:drawablePadding="@dimen/size_3"
        android:text="直播中"
        android:textColor="@color/color_title_green"
        android:textSize="@dimen/font_14"
        />

    <TextView
        android:id="@+id/fans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/name"
        android:layout_below="@+id/name"
        android:layout_marginTop="@dimen/margin_5"
        android:text="粉丝 999"
        android:textColor="@color/font_color_AAAAAA"
        android:textSize="@dimen/font_14"
        />
    <ImageView
        android:id="@+id/concern_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/guanzhu"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/margin_10"
        />
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"
        android:background="@color/font_color_DDDDDD"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>