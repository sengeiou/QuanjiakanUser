<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_color">

    <RelativeLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_title_bar_height"
        android:background="@color/color_title_green">

        <ImageButton
            android:id="@+id/ibtn_back"
            android:layout_width="@dimen/common_title_bar_height"
            android:layout_height="@dimen/common_title_bar_height"
            android:layout_alignParentBottom="true"
            android:background="@color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/back"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="@dimen/height_150"
            android:layout_height="@dimen/height_30"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            >

            <LinearLayout
                android:id="@+id/live_line"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                >

                <TextView
                    android:id="@+id/live"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="直播"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_gravity="center"
                    />

                <View
                    android:id="@+id/live_div"
                    android:layout_width="@dimen/height_50"
                    android:layout_height="@dimen/size_2"
                    android:background="@color/white"
                    android:layout_marginTop="@dimen/size_4"
                    android:layout_gravity="center_horizontal"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/demand_line"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                >

                <TextView
                    android:id="@+id/demand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="点播"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_gravity="center"
                    />

                <View
                    android:id="@+id/demand_div"
                    android:layout_width="@dimen/height_50"
                    android:layout_height="@dimen/size_2"
                    android:background="@color/white"
                    android:layout_marginTop="@dimen/size_4"
                    android:layout_gravity="center_horizontal"
                    />
            </LinearLayout>
        </LinearLayout>
        <!--<TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/common_title_bar_height"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:text="Title"
            android:textColor="@color/white"
            android:textSize="@dimen/font_big" />-->

        <ImageButton
            android:id="@+id/ibtn_menu"
            android:layout_width="@dimen/common_title_bar_height"
            android:layout_height="@dimen/common_title_bar_height"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/ic_shop_cart_light"
            android:visibility="gone" />

        <TextView
            android:id="@+id/menu_text"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/common_title_bar_height"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_10"
            android:gravity="right|center_vertical"
            android:text="添加添加"
            android:textColor="@color/white"
            android:textSize="@dimen/font_16"
            android:visibility="gone" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/container"
        android:layout_below="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    </FrameLayout>
</RelativeLayout>

