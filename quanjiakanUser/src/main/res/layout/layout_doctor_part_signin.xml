<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_color"
    >
    <include
        android:id="@+id/layout_title"
        layout="@layout/layout_title_doctor"
        />
    <ImageView 
        android:id="@+id/image"
        android:layout_below="@id/layout_title"
        android:layout_width="@dimen/height_100"
        android:layout_height="@dimen/height_100"
        android:layout_centerHorizontal="true"
        android:src="@drawable/user_login"
        android:layout_marginTop="@dimen/margin_30"
        />

    <LinearLayout
        android:id="@+id/input_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:layout_marginTop="@dimen/margin_40"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:background="@drawable/selecter_hollow_transport_bg_white"
        android:orientation="vertical"
        >
        <EditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_50"
            android:background="@drawable/selecter_hollow_transport_bg_white"
            android:layout_below="@+id/image"
            android:textSize="@dimen/font_medium"
            android:textColor="#999999"
            android:hint="@string/login_account_hint_doctor"
            android:paddingLeft="@dimen/size_15"
            android:drawablePadding="@dimen/size_10"
            android:drawableLeft="@drawable/login_phone_doctor"
            />

        <View
            android:id="@+id/login_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:background="@color/colorAlphaBlack_11"
            />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_50"
            android:background="@drawable/selecter_hollow_transport_bg_white"
            android:layout_below="@+id/login_password"
            android:hint="@string/login_password_hint_doctor"
            android:textSize="@dimen/font_medium"
            android:textColor="#999999"
            android:paddingLeft="@dimen/size_15"
            android:drawablePadding="@dimen/size_10"
            android:inputType="textPassword"
            android:drawableLeft="@drawable/login_lock_doctor"

            />
    </LinearLayout>


    <Button 
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_50"
        android:background="@drawable/selecter_solid_bg_holo_blue"
        android:layout_below="@+id/input_line"
        android:layout_marginTop="@dimen/margin_30"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textSize="@dimen/font_20"
        android:gravity="center"
        android:text="@string/login"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:onClick="onClick"
        />
    
    
    <RelativeLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_45"
        android:layout_marginRight="@dimen/margin_45"
        android:layout_below="@+id/btn_submit"
        android:layout_marginTop="@dimen/margin_25"
        >
        <ImageView
            android:id="@+id/img_left"
            android:layout_width="@dimen/height_15"
            android:layout_height="@dimen/height_15"
            android:background="@drawable/login_left_doctor"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            />
        <TextView 
            android:id="@+id/tv_signup"
            android:layout_toRightOf="@+id/img_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_16"
            android:textColor="@color/holo_blue_light"
            android:layout_marginLeft="@dimen/size_5"
            android:layout_centerVertical="true"
            android:text="注册帐号"
            />

        <ImageView
            android:id="@+id/img_right"
            android:layout_width="@dimen/height_15"
            android:layout_height="@dimen/height_15"
            android:background="@drawable/login_right_doctor"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
        <TextView 
            android:id="@+id/tv_findpassword"
            android:layout_toLeftOf="@+id/img_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_16"
            android:textColor="@color/holo_blue_light"
            android:layout_marginRight="@dimen/size_5"
            android:text="找回密码"
            android:layout_centerVertical="true"
            />        
        
    </RelativeLayout>
    
    <TextView 
        android:id="@+id/tv_doctor"
        style="@style/textview_left_right_button"
        android:text="医生登录"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/layout_bottom"
        android:layout_marginTop="@dimen/size_15"
        android:textSize="@dimen/font_12"
        android:visibility="gone"
        />
    
    <TextView 
        android:id="@+id/tv_copyright"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="全家康健康管理系统©copyright 2016"
        style="@style/textview_key"
        android:gravity="center_horizontal"
        android:textSize="@dimen/font_10"
        android:visibility="gone"
        />
    
</RelativeLayout>    

