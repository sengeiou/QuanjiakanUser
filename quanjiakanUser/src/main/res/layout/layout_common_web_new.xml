<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_color"
    android:orientation="vertical"
    >
    <include
        android:id="@+id/title_header"
        layout="@layout/layout_title"/>
    <ProgressBar
        android:id="@+id/progress"
        android:layout_below="@id/title_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_3"
        style="@style/ProgressBar_Mini"
        android:indeterminate="false"
        />
    <RelativeLayout
        android:layout_below="@id/progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/refresh"

            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <WebView
                android:id="@+id/webview"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.v4.widget.SwipeRefreshLayout>


        <ImageView
            android:id="@+id/nonedata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/message_group_ico_sel"
            android:layout_centerInParent="true"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/nonedatahint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暂无数据"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/nonedata"
            android:textSize="@dimen/font_14"
            android:textColor="@color/font_color_999999"
            android:visibility="gone"
            />
    </RelativeLayout>
</LinearLayout>