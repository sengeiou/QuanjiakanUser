<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <TextView
        android:id="@+id/station_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="全家康社区服务站-紧急义工服务1111111111111111111111111"
        android:textSize="@dimen/font_14"
        android:textColor="@color/font_color_333333"
        android:layout_marginLeft="@dimen/size_18"
        android:layout_marginTop="@dimen/size_16"
        android:layout_marginRight="@dimen/height_100"
        />
    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginLeft="@dimen/size_18"
        android:layout_below="@id/station_name"
        android:src="@drawable/location_icon_volunteer"
        />
    <TextView
        android:id="@+id/location_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/station_name"
        android:layout_toRightOf="@id/icon"
        android:singleLine="true"
        android:text="全家康社区服务站-紧急义工服务1111111111111111111111111"
        android:textSize="@dimen/font_14"
        android:textColor="@color/font_color_333333"
        android:layout_marginLeft="@dimen/size_5"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginRight="@dimen/height_100"
        />

    <ImageView
        android:id="@+id/place_img"
        android:layout_width="@dimen/height_55"
        android:layout_height="@dimen/height_55"
        android:src="@drawable/ic_launcher"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_marginRight="@dimen/size_18"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1p"
        android:background="@color/font_color_CCCCCC"
        android:layout_below="@+id/place_img"
        android:layout_marginTop="@dimen/size_10"
        />
</RelativeLayout>