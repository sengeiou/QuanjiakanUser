<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_color"
    >
    <include
        android:id="@+id/layout_title"
        layout="@layout/layout_title_doctor"
        />
    <RelativeLayout
        android:id="@+id/info_line"
        android:layout_below="@id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >
        <ImageView
            android:id="@+id/header_icon"
            android:layout_width="@dimen/height_100"
            android:layout_height="@dimen/height_100"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginBottom="@dimen/margin_20"
            android:src="@drawable/ic_launcher"
            />
        <TextView
            android:id="@+id/header_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/header_icon"
            android:layout_alignTop="@+id/header_icon"
            android:layout_marginLeft="@dimen/margin_20"
            android:text="张杰"
            android:textSize="@dimen/font_20"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/header_hospital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/header_name"
            android:layout_alignBottom="@+id/header_name"
            android:layout_marginLeft="@dimen/margin_10"
            android:text="北京协和医院"
            android:textSize="@dimen/font_16"
            android:textColor="@color/colorAlphaBlack_99"
            />

        <TextView
            android:id="@+id/header_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/header_icon"
            android:layout_below="@+id/header_name"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginLeft="@dimen/margin_20"
            android:text="小儿科"
            android:textSize="@dimen/font_16"
            android:textColor="@color/colorAlphaBlack_99"
            />

        <TextView
            android:id="@+id/header_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/header_section"
            android:layout_alignBottom="@+id/header_section"
            android:layout_marginLeft="@dimen/margin_10"
            android:text="副主任医师"
            android:textSize="@dimen/font_16"
            android:textColor="@color/colorAlphaBlack_99"
            />

        <TextView
            android:id="@+id/header_salary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/header_icon"
            android:layout_below="@+id/header_section"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginLeft="@dimen/margin_20"
            android:text="工资"
            android:textSize="@dimen/font_16"
            android:textColor="@color/colorAlphaBlack_99"
            />
    </RelativeLayout>
    <View
        android:id="@+id/header_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"
        android:layout_below="@+id/info_line"
        android:background="@color/colorAlphaBlack_22"
        />

    <LinearLayout
        android:id="@+id/content_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_divider"
        android:layout_marginTop="@dimen/size_12"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_mimaxiugai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/size_6"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/size_15"
            android:paddingRight="@dimen/size_15"
            android:paddingBottom="@dimen/size_15"
            android:paddingTop="@dimen/size_15"
            android:text="关于我们"
            android:drawableRight="@drawable/setting_more_arrow"
            android:textColor="@color/hei222"
            android:textSize="@dimen/font_medium" />

        <View
            android:id="@+id/tv_fenge"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1"
            android:background="@color/main_bg_color" />


        <TextView
            android:id="@+id/tv_dizhi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/size_6"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/size_15"
            android:paddingLeft="@dimen/size_15"
            android:paddingRight="@dimen/size_15"
            android:paddingTop="@dimen/size_15"
            android:text="隐私条款"
            android:drawableRight="@drawable/setting_more_arrow"
            android:textColor="@color/hei222"
            android:textSize="@dimen/font_medium" />

        <View
            android:id="@+id/tv_fenge4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1"
            android:background="@color/main_bg_color" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_banben"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/size_6"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/size_15"
                android:paddingLeft="@dimen/size_15"
                android:paddingRight="@dimen/size_15"
                android:paddingTop="@dimen/size_15"
                android:text="@string/setting_more_version"
                android:textColor="@color/hei222"
                android:textSize="@dimen/font_medium" />

            <TextView
                android:id="@+id/tv_banben_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/size_15"
                android:paddingLeft="@dimen/size_15"
                android:paddingRight="@dimen/size_15"
                android:paddingTop="@dimen/size_15"
                android:text="@string/setting_more_version"
                android:layout_alignParentRight="true"
                android:textColor="@color/colorAlphaBlack_77"
                android:textSize="@dimen/font_medium" />

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1"
            android:layout_below="@+id/info_line"
            android:background="@color/colorAlphaBlack_22"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/exit"
        android:layout_below="@+id/content_line"
        android:layout_marginTop="@dimen/margin_40"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/margin_15"
        android:text="注销账号"
        android:textColor="@color/holo_blue_light"
        android:textSize="@dimen/font_medium"
        android:background="@drawable/selecter_hollow_transport_bg_white"
        />
</RelativeLayout>

