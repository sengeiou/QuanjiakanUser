<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_color"
    >
    
    <LinearLayout 
        android:id="@+id/layout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/size_8"
        >

            <TextView 
                android:id="@+id/tv_consultant"
                android:layout_width="@dimen/size_0"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:drawableBottom="@drawable/doctor_services"
                android:text="在线咨询"
                android:layout_weight="1"
                android:padding="@dimen/size_12"
                android:drawablePadding="@dimen/size_12"
                android:layout_marginRight="@dimen/size_4"
                android:background="@drawable/inputbox_1"
                android:textColor="@color/hei55"
                android:textSize="@dimen/font_medium"
                />

            <TextView 
                android:id="@+id/tv_medcine"
                android:layout_width="@dimen/size_0"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:drawableBottom="@drawable/bus_services"
                android:text="药品配送"
                android:layout_weight="1"
                android:padding="@dimen/size_12"
                android:layout_marginLeft="@dimen/size_4"
                android:background="@drawable/inputbox_1"
                android:drawablePadding="@dimen/size_12"
                android:textColor="@color/hei55"
                android:textSize="@dimen/font_medium"
                />
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/layout_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/size_8"
        android:layout_marginRight="@dimen/size_8"
        android:layout_below="@+id/layout_1"
        >

            <TextView 
                android:id="@+id/tv_housekeeper"
                android:layout_width="@dimen/size_0"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:drawableBottom="@drawable/hourse_service"
                android:text="家政服务"
                android:layout_weight="1"
                android:padding="@dimen/size_12"
                android:drawablePadding="@dimen/size_12"
                android:layout_marginRight="@dimen/size_4"
                android:background="@drawable/inputbox_1"
                android:textColor="@color/hei55"
                android:textSize="@dimen/font_medium"
                />

            <TextView 
                android:id="@+id/tv_none"
                android:layout_width="@dimen/size_0"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:drawableBottom="@drawable/doctor_services"
                android:text="社区义工"
                android:layout_weight="1"
                android:padding="@dimen/size_12"
                android:layout_marginLeft="@dimen/size_12"
                android:drawablePadding="@dimen/size_12"
                android:background="@drawable/inputbox_1"
                android:textColor="@color/hei55"
                android:textSize="@dimen/font_medium"
                />
    </LinearLayout>
</RelativeLayout>  