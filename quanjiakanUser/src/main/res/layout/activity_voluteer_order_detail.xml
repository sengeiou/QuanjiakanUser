<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fengexian"
    >
    <include
        android:id="@+id/title"
        layout="@layout/layout_title"/>

    <LinearLayout
        android:layout_below="@+id/title"
        android:id="@+id/ll_mes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/head_icon"
            android:layout_width="@dimen/height_100"
            android:layout_height="@dimen/height_100"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/size_12"
            android:layout_marginTop="@dimen/size_14"
            android:background="@drawable/record_portrait_icon" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编号:0182"
                android:textColor="@color/font_color_333333"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/iv_help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@+id/tv_id"
                android:src="@drawable/record_icon_urgent" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="60dp">

            <TextView
                android:id="@+id/tv_thing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="求助事项:"
                android:textColor="@color/font_color_999999"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_thing_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/tv_thing"
                android:text="陪同外出"
                android:textColor="@color/font_color_333333"
                android:textSize="18sp" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="18dp">

            <TextView
                android:id="@+id/tv_reason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="求助原因:"
                android:textColor="@color/font_color_999999"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_reason_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/tv_reason"
                android:ellipsize="end"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:text="子女今日临时出门抽不出时间dfdfdd"
                android:textColor="@color/font_color_333333"
                android:textSize="18sp" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="18dp">

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="约定时间:"
                android:textColor="@color/font_color_999999"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_time_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@+id/tv_time"
                android:text="2012-12-12 16:30"
                android:textColor="@color/font_color_333333"
                android:textSize="18sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="18dp">

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="约定地点:"
                android:textColor="@color/font_color_999999"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_location_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@+id/tv_location"
                android:text="周门北路28号10楼1002室"
                android:ellipsize="end"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:textColor="@color/font_color_333333"
                android:textSize="18sp" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="18dp">

            <TextView
                android:id="@+id/tv_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="其他补充信息:"
                android:textColor="@color/font_color_999999"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_other_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@+id/tv_other"
                android:text="麻烦亲爱的义工同志带我妈妈去吃个无糖早餐...餐费会预留"
                android:paddingRight="10dp"
                android:textColor="@color/font_color_333333"
                android:textSize="18sp" />
        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/complete_border"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:textColor="@color/font_color_666666"
        android:textSize="22sp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:text="完成"
        />




</RelativeLayout>