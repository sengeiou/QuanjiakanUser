<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPureWhite"
    android:paddingBottom="@dimen/size_15"
    >
    <TextView
        android:id="@+id/status"
        android:layout_width="@dimen/height_60"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:paddingTop="@dimen/size_8"
        android:paddingBottom="@dimen/size_8"
        android:background="@drawable/selecter_inquiry_green"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/size_10"
        android:text="@string/contact_unadd"
        android:textColor="@color/colorPureWhite"
        android:textSize="@dimen/font_16"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/type"
        android:layout_marginLeft="@dimen/margin_15"
        android:layout_marginTop="@dimen/margin_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/doctor_out_go_servicetype_hurry"
        android:textColor="@color/white"
        android:textSize="@dimen/font_16"
        android:background="@drawable/selecter_solid_14a9a8"
        android:paddingTop="@dimen/size_2"
        android:paddingBottom="@dimen/size_2"
        android:paddingLeft="@dimen/size_5"
        android:paddingRight="@dimen/size_5"
        />
    <TextView
        android:id="@+id/orderid"
        android:layout_toRightOf="@id/type"
        android:layout_alignBottom="@+id/type"
        android:layout_marginLeft="@dimen/margin_5"
        android:layout_marginRight="@dimen/height_90"
        android:singleLine="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QJK1222222222222222222222233333333333"
        android:textSize="@dimen/font_18"
        android:textColor="@color/font_color_333333"
        />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/type"
        android:layout_below="@id/type"
        android:layout_marginTop="@dimen/margin_5"
        android:text="张男田"
        android:textSize="@dimen/font_16"
        android:textColor="@color/font_color_999999"
        />

    <TextView
        android:id="@+id/gander"
        android:layout_toRightOf="@id/name"
        android:layout_alignBottom="@+id/name"
        android:layout_marginLeft="@dimen/margin_5"
        android:singleLine="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="男"
        android:textSize="@dimen/font_16"
        android:textColor="@color/font_color_999999"
        />

    <TextView
        android:id="@+id/age"
        android:layout_toRightOf="@id/gander"
        android:layout_alignBottom="@+id/gander"
        android:layout_marginLeft="@dimen/margin_5"
        android:singleLine="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="47岁"
        android:textSize="@dimen/font_16"
        android:textColor="@color/font_color_999999"
        />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/name"
        android:layout_below="@id/name"
        android:layout_marginTop="@dimen/margin_5"
        android:text="下单时间:2015-10-10 19:20"
        android:textSize="@dimen/font_16"
        android:textColor="@color/font_color_999999"
        />

</RelativeLayout>