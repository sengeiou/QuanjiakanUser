<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ly_myinfo_changebirth"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:gravity="center"
    android:orientation="vertical" >

	<LinearLayout
		android:id="@+id/llt_set_time"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/bg_dialog_selector"
		android:orientation="vertical" >

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			>


			<TextView
				android:id="@+id/tv_share_title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginBottom="@dimen/margin_15"
				android:layout_marginTop="@dimen/margin_18"
				android:layout_gravity="center_horizontal"
				android:layout_centerHorizontal="true"
				android:text=""
				android:textColor="@color/black"
				android:textSize="@dimen/font_18" />


			<TextView
				android:id="@+id/btn_sure"
				android:layout_width="@dimen/height_60"
				android:layout_height="@dimen/height_30"
				android:layout_alignParentRight="true"
				android:text="完成"
				android:textColor="#5188CB"
				android:gravity="center"
				android:layout_centerVertical="true"
				android:textSize="@dimen/font_12" />

			<TextView
				android:id="@+id/btn_cancel"
				android:layout_width="@dimen/height_60"
				android:layout_height="@dimen/height_30"
				android:layout_alignParentLeft="true"
				android:text="@string/cancel"
				android:textColor="#5188CB"
				android:gravity="center"
				android:layout_centerVertical="true"
				android:textSize="@dimen/font_12" />

		</RelativeLayout>

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@color/white"
			>

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="@dimen/size_35"
				android:layout_centerInParent="true"
				>

				<View
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:layout_alignParentTop="true"
					android:background="@color/font_color_999999"
					/>

				<View
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:layout_alignParentBottom="true"
					android:background="@color/font_color_999999"
					/>

			</RelativeLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="@dimen/height_160"
				android:orientation="horizontal"
				android:layout_marginLeft="@dimen/margin_100"
				android:layout_marginRight="@dimen/margin_100"
				android:gravity="center_vertical">

				<com.quanjiakanuser.widget.WheelView
					android:id="@+id/wv_am_pm"
					android:layout_width="@dimen/size_0"
					android:layout_weight="1"
					android:layout_height="match_parent"
					android:layout_gravity="center_vertical"
					/>
				<com.quanjiakanuser.widget.WheelView
					android:id="@+id/wv_hour"
					android:layout_width="@dimen/size_0"
					android:layout_weight="1"
					android:layout_height="match_parent"
					android:layout_gravity="center_vertical"
					/>

				<com.quanjiakanuser.widget.WheelView
					android:id="@+id/wv_minute"
					android:layout_width="@dimen/size_0"
					android:layout_weight="1"
					android:layout_height="match_parent"
					android:layout_gravity="center_vertical"
					/>
			</LinearLayout>

		</RelativeLayout>

	</LinearLayout>

</LinearLayout>