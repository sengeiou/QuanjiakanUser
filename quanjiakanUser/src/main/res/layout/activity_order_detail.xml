<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorHui">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="18sp"
            android:text="收费明细"/>


        <TextView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_alignParentLeft="true"
            android:textSize="18sp"
            android:layout_marginLeft="8dp"
            android:textColor="@color/colorSpecialCar"
            android:text="返回"
            />

    </RelativeLayout>

    <TextView
        style="@style/textview_line"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单号"
                android:textSize="14sp"
                android:layout_marginLeft="23dp"/>


            <TextView
                android:id="@+id/tv_ordernumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="201609090432"
                android:layout_alignParentRight="true"
                android:layout_marginRight="23dp"/>

        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服务类型"
                android:textSize="14sp"
                android:layout_marginLeft="23dp"/>


            <TextView
                android:id="@+id/tv_ambulance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="急救车"
                android:layout_alignParentRight="true"
                android:layout_marginRight="23dp"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下单时刻"
                android:textSize="14sp"
                android:layout_marginLeft="23dp"/>


            <TextView
                android:id="@+id/tv_placeorder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09-08-13:00"
                android:layout_alignParentRight="true"
                android:layout_marginRight="23dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发车时刻"
                android:textSize="14sp"
                android:layout_marginLeft="23dp"/>


            <TextView
                android:id="@+id/tv_depart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09-08-13:25"
                android:layout_alignParentRight="true"
                android:layout_marginRight="23dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下车时刻"
                android:textSize="14sp"
                android:layout_marginLeft="23dp"/>


            <TextView
                android:id="@+id/tv_debus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09-08-13:40"
                android:layout_alignParentRight="true"
                android:layout_marginRight="23dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发车位置"
                android:textSize="14sp"
                android:layout_marginLeft="23dp"/>


            <TextView
                android:id="@+id/tv_departcar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="西朗地铁站"
                android:layout_alignParentRight="true"
                android:layout_marginRight="23dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下车位置"
                android:textSize="14sp"
                android:layout_marginLeft="23dp"/>


            <TextView
                android:id="@+id/tv_finishlocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="广州第一人民医院"
                android:layout_alignParentRight="true"
                android:layout_marginRight="23dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="实际里程"
                android:textSize="14sp"
                android:layout_marginLeft="23dp"/>


            <TextView
                android:id="@+id/tv_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20公里"
                android:layout_alignParentRight="true"
                android:layout_marginRight="23dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人数"
                android:textSize="14sp"
                android:layout_marginLeft="23dp"/>


            <TextView
                android:id="@+id/tv_membernumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2人"
                android:layout_alignParentRight="true"
                android:layout_marginRight="23dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="价格"
                android:textSize="14sp"
                android:layout_marginLeft="23dp"/>


            <TextView
                android:id="@+id/tv_paymoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥30"
                android:layout_alignParentRight="true"
                android:layout_marginRight="23dp"/>

        </RelativeLayout>







    </LinearLayout>











</LinearLayout>