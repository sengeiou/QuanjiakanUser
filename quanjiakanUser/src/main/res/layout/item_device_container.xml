    <com.androidquanjiakan.view.MaterialBadgeTextView
        android:id="@+id/notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="@color/common_red"
        android:visibility="invisible"
        />


    <TextView
        android:id="@+id/name"
        android:layout_width="@dimen/size_60"
        android:layout_height="@dimen/size_20"
        android:layout_alignBottom="@id/bg"
        android:layout_alignLeft="@id/bg"
        android:layout_alignRight="@id/bg"
        android:background="@drawable/selecter_device_container_normal"
