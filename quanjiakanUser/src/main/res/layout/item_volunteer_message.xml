<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/head_icon"
        android:layout_width="@dimen/height_40"
        android:layout_height="@dimen/height_40"
        android:layout_marginBottom="@dimen/size_12"
        android:layout_marginLeft="@dimen/size_17"
        android:layout_marginRight="@dimen/size_5"
        android:layout_marginTop="@dimen/size_10"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/help_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selecter_inquiry_green"
        android:gravity="center"
        android:padding="@dimen/size_3"
        android:text="急助"
        android:textColor="@color/white"
        android:textSize="@dimen/font_10"
        android:layout_toRightOf="@+id/head_icon"
        android:layout_marginTop="@dimen/size_8"
        />

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/help_type"
        android:layout_marginBottom="@dimen/size_1"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_toRightOf="@+id/help_type"
        android:text="0180"
        android:textSize="@dimen/font_14"
        android:textColor="@color/font_color_000000"
        android:layout_marginRight="@dimen/height_80"
        />

    <TextView
        android:id="@+id/service_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/help_type"
        android:layout_toRightOf="@+id/head_icon"
        android:text="来自义工  张大明的消息"
        android:textColor="@color/font_color_666666"
        android:textSize="@dimen/font_10"
        android:layout_marginTop="@dimen/size_8"
        android:layout_marginRight="@dimen/height_80"
        />

    <TextView
        android:id="@+id/service_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/service_message"
        android:layout_toRightOf="@+id/head_icon"
        android:text="陪同外出  2016-08-21  08:00"
        android:textColor="@color/font_color_999999"
        android:textSize="@dimen/font_10"
        android:layout_marginTop="@dimen/size_8"
        android:layout_marginRight="@dimen/height_80"
        />


    <View
        android:id="@+id/divider"
        android:layout_below="@id/service_time"
        android:layout_marginTop="@dimen/size_12"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1p"
        android:background="@color/font_color_CCCCCC" />

    <TextView
        android:id="@+id/status"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/size_30"
        android:layout_marginRight="@dimen/size_17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="未完成"
        android:textSize="@dimen/font_14"
        android:textColor="@color/font_color_333333"
        android:gravity="center"
        />

</RelativeLayout>