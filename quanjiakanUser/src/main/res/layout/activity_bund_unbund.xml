<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/layout_title"
        android:id="@+id/title"
        />

    <TextView
        android:id="@+id/tv_1"
        android:layout_below="@id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="扫一扫,绑定手表"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_100"
        android:textColor="@color/font_color_333333"
        android:textSize="@dimen/font_14"
        />

    <ImageView
        android:layout_below="@id/tv_1"
        android:id="@+id/iv_img"
        android:layout_width="@dimen/height_150"
        android:layout_height="@dimen/height_150"
        android:src="@drawable/erweima"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/size_12"
        />

    <TextView
        android:id="@+id/tv_2"
        android:layout_below="@id/iv_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="宝贝的二维码"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/size_12"
        android:textColor="@color/font_color_333333"
        android:textSize="@dimen/font_14"
        />


    <TextView
        android:id="@+id/tv_bund_num"
        android:layout_below="@id/tv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/size_12"
        android:textColor="@color/color_xun_ing"
        android:textSize="@dimen/font_14"
        />
    
    <TextView
        android:id="@+id/tv_unbund"
        android:layout_marginBottom="@dimen/size_22"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_width="@dimen/height_270"
        android:layout_height="@dimen/height_40"
        android:textColor="@color/color_btn_green"
        android:background="@drawable/selecter_btn_bac_green"
        android:text="解除绑定"
        />


</RelativeLayout>