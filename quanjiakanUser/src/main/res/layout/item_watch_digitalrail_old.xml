<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPureWhite"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_40"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_5"
            android:gravity="center"
            android:paddingLeft="@dimen/size_20"
            android:paddingRight="@dimen/size_20"
            android:scaleType="centerInside"
            android:text="@string/contact_add"
            android:textColor="@color/font_color_999999"
            android:textSize="@dimen/font_16"
            />

        <ImageView
            android:id="@+id/switchbtn"
            android:layout_width="@dimen/size_25"
            android:layout_height="@dimen/size_25"
            android:layout_marginRight="@dimen/margin_5"
            android:layout_gravity="center_vertical"
            android:src="@drawable/enclosure_switch_open"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/delete"
            android:layout_width="@dimen/size_20"
            android:layout_height="@dimen/size_20"
            android:layout_marginRight="@dimen/margin_5"
            android:layout_gravity="center_vertical"
            android:src="@drawable/enclosure_ico_delete"
            />

    </LinearLayout>
    <View
        android:id="@+id/div"
        android:layout_below="@id/container"
        android:layout_alignLeft="@id/container"
        android:layout_alignRight="@id/container"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_1p"
        android:background="@color/font_color_CCCCCC"/>
</RelativeLayout>