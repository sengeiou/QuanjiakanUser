<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    
    <com.quanjiakanuser.widget.InsideViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
                
  	</com.quanjiakanuser.widget.InsideViewPager>
  	
    <TextView
        android:id="@+id/btn_enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_enter"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/rgp"
        android:layout_marginBottom="@dimen/size_8"
        android:visibility="gone"
        />
    
    <RadioGroup 
        android:id="@+id/rgp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/size_12"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        >
        
        <RadioButton 
            android:id="@+id/rbtn_1"
            android:layout_width="@dimen/size_12"
            android:layout_height="@dimen/size_2"
            android:background="@drawable/selector_yindaoye"
            android:checked="true"
            android:button="@null"
            />
        
        <RadioButton 
            android:id="@+id/rbtn_2"
            android:layout_width="@dimen/size_12"
            android:layout_height="@dimen/size_2"
            android:background="@drawable/selector_yindaoye"
            android:button="@null"
            />
        
    </RadioGroup>  	
</RelativeLayout>