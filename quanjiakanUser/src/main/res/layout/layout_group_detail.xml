<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_color"
	android:orientation="vertical"
    >
    
    <include 
        android:id="@+id/layout_title"
        layout="@layout/layout_title"
        />

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@color/white"
			android:orientation="vertical">

			<GridView
				android:id="@+id/grid"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/margin_10"
				android:background="@color/white"
				android:numColumns="4"
				android:paddingLeft="@dimen/size_4"
				android:paddingRight="@dimen/size_4"></GridView>

			<View
				android:layout_width="match_parent"
				android:layout_height="@dimen/size_1"
				android:layout_marginLeft="@dimen/margin_15"
				android:layout_marginRight="@dimen/margin_15"
				android:background="@color/colorAlphaBlack_11" />

			<TextView
				android:id="@+id/group_number"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@color/white"
				android:drawableRight="@drawable/setting_more_arrow"
				android:padding="@dimen/margin_15"
				android:text="全部群成员" />

			<View
				android:layout_width="match_parent"
				android:layout_height="@dimen/size_1"
				android:background="@color/colorAlphaBlack_11" />

			<View
				android:layout_width="match_parent"
				android:layout_height="@dimen/size_10"
				android:background="@color/main_bg_color" />

			<LinearLayout
				android:id="@+id/group_name_line"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@color/white"
				android:orientation="horizontal">

				<TextView
					android:id="@+id/group_name"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:padding="@dimen/margin_15"
					android:text="群聊名称" />

				<TextView
					android:id="@+id/group_name_value"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:drawablePadding="@dimen/margin_10"
					android:drawableRight="@drawable/setting_more_arrow"
					android:gravity="right"
					android:padding="@dimen/margin_15"
					android:singleLine="true"
					android:text="群聊名称" />
			</LinearLayout>

			<View
				android:layout_width="match_parent"
				android:layout_height="@dimen/size_1"
				android:layout_marginLeft="@dimen/margin_15"
				android:layout_marginRight="@dimen/margin_15"
				android:background="@color/colorAlphaBlack_11" />

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@color/white"
				android:orientation="horizontal">

				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:padding="@dimen/margin_15"
					android:text="置顶聊天" />

				<ImageView
					android:id="@+id/to_top_status"
					android:layout_width="@dimen/height_33"
					android:layout_height="@dimen/height_22"
					android:layout_gravity="center_vertical"
					android:layout_marginRight="@dimen/margin_20"
					android:background="@drawable/group_top_open" />
			</LinearLayout>

			<View
				android:layout_width="match_parent"
				android:layout_height="@dimen/size_1"
				android:layout_marginLeft="@dimen/margin_15"
				android:layout_marginRight="@dimen/margin_15"
				android:background="@color/colorAlphaBlack_11" />

			<TextView
				android:id="@+id/record_history"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@color/white"
				android:drawableRight="@drawable/setting_more_arrow"
				android:padding="@dimen/margin_15"
				android:text="查找聊天记录" />

			<View
				android:layout_width="match_parent"
				android:layout_height="@dimen/size_1"
				android:layout_marginLeft="@dimen/margin_15"
				android:layout_marginRight="@dimen/margin_15"
				android:background="@color/colorAlphaBlack_11" />

			<TextView
				android:id="@+id/remove_record_history"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@color/white"
				android:padding="@dimen/margin_15"
				android:text="清空聊天记录" />

			<View
				android:layout_width="match_parent"
				android:layout_height="@dimen/size_1"
				android:background="@color/colorAlphaBlack_11" />

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@color/main_bg_color"
				android:gravity="center_horizontal"
				android:paddingTop="@dimen/margin_20">

				<TextView
					android:id="@+id/exit"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:background="@drawable/selecter_hollow_green_transport"
					android:paddingBottom="@dimen/margin_10"
					android:paddingLeft="@dimen/margin_20"
					android:paddingRight="@dimen/margin_20"
					android:paddingTop="@dimen/margin_10"
					android:text="删除并退出"
					android:textColor="@color/color_title_green"
					android:textSize="@dimen/font_16" />
			</LinearLayout>
		</LinearLayout>
	</ScrollView>


</LinearLayout>