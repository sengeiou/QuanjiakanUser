	<LinearLayout
		android:id="@+id/title_line"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_marginTop="@dimen/size_17"
		android:paddingLeft="@dimen/size_15"
		android:paddingRight="@dimen/size_15"
		android:gravity="center_vertical"
		>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="围栏名称:"
			android:textColor="@color/font_color_333333"
			android:textSize="@dimen/font_18"
			android:layout_marginRight="@dimen/size_3"
			/>
		<EditText
			android:id="@+id/name"
			android:layout_width="match_parent"
			android:layout_height="@dimen/size_30"
			android:background="@drawable/selecter_watch_old_efence_comfirm_dialog_name"
			android:paddingLeft="@dimen/size_6"
			android:paddingRight="@dimen/size_6"
			android:maxLines="1"
			android:text=""
			android:textSize="@dimen/font_14"
			android:textColor="@color/font_color_999999"
			/>
	</LinearLayout>
	<ImageView
		android:id="@+id/img"
		android:layout_below="@id/title_line"
		android:layout_centerHorizontal="true"
		android:layout_width="@dimen/height_100"
		android:layout_height="@dimen/height_100"
		android:layout_marginTop="@dimen/size_15"
		android:layout_marginBottom="@dimen/size_5"
		android:src="@drawable/crawl_icon_sure"
		/>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:gravity="center"
		android:layout_below="@+id/img"
		android:layout_marginBottom="@dimen/size_20"
		android:layout_centerHorizontal="true">
		<TextView
			android:id="@+id/confirm"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/confirm"
			android:textColor="@color/color_btn_look_ing"
			android:textSize="@dimen/font_16"
			android:background="@drawable/selecter_hollow_gray"
			android:layout_marginRight="@dimen/size_15"
			android:paddingLeft="@dimen/size_30"
			android:paddingRight="@dimen/size_30"
			android:paddingTop="@dimen/size_10"
			android:paddingBottom="@dimen/size_10"
			/>
		<TextView
			android:id="@+id/cancel"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/cancel"
			android:textColor="@color/font_color_666666"
			android:textSize="@dimen/font_16"
			android:background="@drawable/selecter_hollow_gray"
			android:layout_marginLeft="@dimen/size_15"
			android:paddingLeft="@dimen/size_30"
			android:paddingRight="@dimen/size_30"
			android:paddingTop="@dimen/size_10"
			android:paddingBottom="@dimen/size_10"
			/>
	</LinearLayout>
</RelativeLayout>