        <LinearLayout
            android:id="@+id/ll_me"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_alignParentTop="true"
            >

            <LinearLayout
                android:id="@+id/ll_mes"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/shape_corner_living_name"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_icon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/friend_default" />

                <RelativeLayout
                    android:id="@+id/rlt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="@dimen/size_10"
                    >

                    <TextView
                        android:id="@+id/tv_livinger_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="何慧"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_watch_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_livinger_name"
                        android:text="500"
                        android:textColor="@color/white"
                        android:textSize="12sp" />


                </RelativeLayout>

                <ImageView
                    android:id="@+id/concern"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_living_focus"
                    android:paddingLeft="@dimen/margin_5"
                    android:paddingRight="@dimen/margin_5"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:layout_marginRight="@dimen/margin_5"
                    android:src="@drawable/icon_focus_on_nor"
                    />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/id_recyclerview_horizontal"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/ll_mes"
                android:layout_weight="1">

            </android.support.v7.widget.RecyclerView>

        </LinearLayout>
