<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_color"
    android:orientation="vertical">

    <include
        android:id="@+id/layout_title"
        layout="@layout/layout_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_bg_color"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="20dp"
                android:text="银行卡类型"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <TextView
                    style="@style/textview_key"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:gravity="left|center_vertical"
                    android:padding="2dp"
                    android:text="卡类型"
                    android:textColor="@color/font_color_333333"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_bank"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="9"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="银行名称"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:textColor="@color/color_title_green"
                    android:textColorHint="@color/font_color_AAAAAA"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/et_cardtype"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_weight="5"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="信用卡"
                    android:padding="10dp"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:textColor="@color/maincolor"
                    android:textColorHint="@color/font_color_AAAAAA"
                    android:textSize="16sp"
                    android:visibility="gone" />
            </LinearLayout>
            <RadioGroup
                android:id="@+id/rgp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                >
                <RadioButton
                    android:id="@+id/rbtn_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_medium"
                    android:textColor="@color/hei222"
                    android:paddingTop="@dimen/margin_20"
                    android:paddingBottom="@dimen/margin_20"
                    android:text="储蓄卡"
                    android:checked="true"
                    android:drawableLeft="@drawable/selector_gender"
                    android:button="@null"
                    android:paddingRight="@dimen/margin_15"
                    android:paddingLeft="@dimen/margin_15"
                    android:gravity="center"
                    android:drawablePadding="@dimen/size_6"
                    android:layout_weight="1"
                    />
                <RadioButton
                    android:id="@+id/rbtn_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_medium"
                    android:textColor="@color/hei222"
                    android:paddingTop="@dimen/margin_20"
                    android:paddingBottom="@dimen/margin_20"
                    android:text="信用卡"
                    android:drawableLeft="@drawable/selector_gender"
                    android:button="@null"
                    android:paddingRight="@dimen/margin_15"
                    android:paddingLeft="@dimen/margin_15"
                    android:gravity="center"
                    android:drawablePadding="@dimen/size_6"
                    android:layout_weight="1"
                    />
                <RadioButton
                    android:id="@+id/rbtn_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_medium"
                    android:textColor="@color/hei222"
                    android:paddingTop="@dimen/margin_20"
                    android:paddingBottom="@dimen/margin_20"
                    android:text="其他"
                    android:drawableLeft="@drawable/selector_gender"
                    android:button="@null"
                    android:paddingRight="@dimen/margin_15"
                    android:paddingLeft="@dimen/margin_15"
                    android:gravity="center"
                    android:drawablePadding="@dimen/size_6"
                    android:layout_weight="1"
                    />
            </RadioGroup>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:text="银行卡类型"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <TextView
                    style="@style/textview_key"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:gravity="left|center_vertical"
                    android:padding="2dp"
                    android:text="支行名"
                    android:textColor="@color/font_color_333333"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_bank_branch"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="9"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="支行名称"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:textColor="@color/color_title_green"
                    android:textColorHint="@color/font_color_AAAAAA"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:text="请输入银行预留手机号"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/layout_name"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <TextView
                    style="@style/textview_key"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:gravity="left|center"
                    android:padding="2dp"
                    android:text="手机号"
                    android:textColor="@color/font_color_333333"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_phonenumber"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_weight="8"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请在此处填写手机号码"
                    android:padding="10dp"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:inputType="phone"
                    android:textColor="@color/hei55"
                    android:textColorHint="@color/font_color_AAAAAA"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cb_addcard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/selector_addcard"
                    android:checked="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="我阅读并同意"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_xieyi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用户协议"
                    android:textColor="@color/registcolor"
                    android:textSize="14sp" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_next"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/selector_btnpress"
                android:text="下一步"
                android:textColor="@drawable/selector_textcolor"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>