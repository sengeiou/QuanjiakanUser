<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_70"
    android:background="@color/white"
    >

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/height_20"
        android:layout_height="@dimen/height_20"
        android:layout_marginLeft="@dimen/size_8"
        android:layout_marginTop="@dimen/size_15"
        android:scaleType="fitCenter"
        android:src="@drawable/ebean_icon_recharge"
        />

    <TextView
        android:id="@+id/tv_describe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/hei222"
        android:textSize="14sp"
        android:layout_toRightOf="@+id/image"
        android:layout_alignTop="@+id/image"
        android:text="充值了60个E豆"
        android:layout_marginLeft="@dimen/size_8"
        />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_describe"
        android:layout_alignLeft="@+id/tv_describe"
        android:layout_toRightOf="@+id/image"
        android:textSize="14sp"
        android:text="2017-01-20 12:12:20"
        android:singleLine="true"
        android:textColor="@color/hei"
        android:layout_marginTop="@dimen/margin_5"
        />

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="充值成功"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:singleLine="true"
        android:textColor="@color/red"
        android:layout_marginRight="@dimen/margin_10"
        />
    <View
        android:id="@+id/div"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1p"
        android:visibility="visible"
        android:layout_alignParentBottom="true"
        android:background="@color/main_bg_color"
        />
</RelativeLayout>