<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white_dialog_bg"
    >
	<LinearLayout
		android:id="@+id/header"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<TextView
			android:id="@+id/tv_mark"
			android:layout_width="@dimen/size_4"
			android:layout_height="@dimen/size_18"
			android:background="@color/maincolor"
			android:layout_marginTop="@dimen/margin_10"
			android:layout_marginBottom="@dimen/margin_10"
			/>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="费用明细"
			android:textColor="@color/colorAlphaBlack_EE"
			android:layout_marginLeft="@dimen/height_16"
			android:layout_weight="1"
			android:layout_gravity="center_vertical"
			/>
		<ImageView
			android:id="@+id/exit"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/housekeeper_detail_close_dialog"
			android:layout_gravity="center_vertical"
			android:layout_marginRight="@dimen/margin_10"
			/>
	</LinearLayout>
	<View
		android:id="@+id/diviver_line"
		android:layout_below="@+id/header"
		android:layout_width="match_parent"
		android:layout_height="@dimen/size_1"
		android:background="@color/colorAlphaBlack_55"
		/>
	<RelativeLayout
		android:id="@+id/expense_line"
		android:layout_below="@id/diviver_line"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="@dimen/margin_20"
		android:background="#669AFF9A"
		android:paddingTop="@dimen/margin_25"
		android:paddingLeft="@dimen/margin_20"
		android:paddingRight="@dimen/margin_20"
		android:paddingBottom="@dimen/margin_25"
		>
		<TextView
			android:id="@+id/expense"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="5424.00"
			android:textSize="@dimen/font_20"
			android:textColor="#169e4f"
			/>
		<TextView
			android:id="@+id/unit"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toRightOf="@+id/expense"
			android:layout_alignBottom="@+id/expense"
			android:layout_marginLeft="@dimen/margin_10"
			android:text="元"
			android:layout_marginBottom="@dimen/size_2"
			android:textColor="@color/colorAlphaBlack_CC"
			android:textSize="@dimen/font_14"
			/>

		<TextView
			android:id="@+id/count"
			android:layout_below="@+id/expense"
			android:layout_marginTop="@dimen/font_14"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="=7小时X31天X25元/天"
			android:textColor="@color/color_countTextColor"
			android:textSize="@dimen/font_14"
			/>
	</RelativeLayout>
	<TextView
		android:id="@+id/include_header"
		android:layout_below="@id/expense_line"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="@dimen/margin_20"
		android:text="费用包含:"
		/>
	<TextView
		android:id="@+id/include_value"
		android:layout_below="@+id/include_header"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="@dimen/margin_20"
		android:layout_marginRight="@dimen/margin_20"
		android:layout_marginTop="@dimen/margin_10"
		android:layout_marginBottom="@dimen/margin_20"
		android:text="2222222222222222222222222222222222222222222222222222"
		/>
	<TextView
		android:id="@+id/exclude_header"
		android:layout_below="@+id/include_value"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="费用不含:"
		android:layout_marginLeft="@dimen/margin_20"
		/>
	<TextView
		android:id="@+id/exclude_value"
		android:layout_below="@+id/exclude_header"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="@dimen/margin_20"
		android:layout_marginRight="@dimen/margin_20"
		android:layout_marginTop="@dimen/margin_10"
		android:layout_marginBottom="@dimen/margin_30"
		android:text="2222222222222222222222222222222222222222222222222222"
		/>
</RelativeLayout>