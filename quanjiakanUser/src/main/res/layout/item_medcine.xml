<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:background="@color/white"
    >
    <ImageView 
        android:id="@+id/image"
        android:layout_width="@dimen/height_75"
        android:layout_height="@dimen/height_75"
        android:src="@drawable/ic_doctor"
        android:layout_marginLeft="@dimen/size_8"
        />
    
    
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/hei222" 
        android:textSize="@dimen/font_14"
        android:layout_toRightOf="@+id/image"
        android:text="张杰"
        android:layout_marginLeft="@dimen/size_8"
        android:layout_marginTop="@dimen/size_4"
        android:maxLines="3"
        />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/image"
        android:textSize="@dimen/font_14"
        android:text="12.99"
        android:textColor="@color/red"
        android:layout_marginLeft="@dimen/size_8"
        android:layout_alignBottom="@+id/image"
        android:layout_marginBottom="@dimen/size_4"
        />
    <View
        android:id="@+id/divider"
        android:layout_below="@+id/image"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"
        android:background="@color/colorAlphaBlack_44"
        />
    <ImageView
        android:id="@+id/add_to"
        android:layout_above="@id/divider"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/margin_10"
        android:layout_width="@dimen/height_20"
        android:layout_height="@dimen/height_20"
        android:background="@drawable/buy_list_add"

        />
</RelativeLayout>