<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="bottom"
    android:background="#00000000"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:id="@+id/ly_myinfo_changeaddress_child"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_dialog_selector"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_myinfo_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/cancel"
                android:gravity="center"
                android:textSize="18sp" />

             <TextView
                 android:layout_width="1dp"
                 android:layout_height="match_parent"
                 android:textColor="@color/hei55"/>
            <TextView
                android:id="@+id/btn_myinfo_sure"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="чбошод"
                android:gravity="center"
                android:textColor="@color/maincolor"
                android:textSize="18sp" />
        </LinearLayout>

        <TextView
            style="@style/textview_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dip"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <com.quanjiakanuser.widget.WheelView
                android:id="@+id/wv_year"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1" />

            <com.quanjiakanuser.widget.WheelView
                android:id="@+id/wv_month"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1" />

            <com.quanjiakanuser.widget.WheelView
                android:id="@+id/wv_day"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1" />

            <com.quanjiakanuser.widget.WheelView
                android:id="@+id/wv_hour"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1" />

            <com.quanjiakanuser.widget.WheelView
                android:id="@+id/wv_minute"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>