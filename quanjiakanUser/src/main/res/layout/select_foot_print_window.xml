<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:id="@+id/llt_popup"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/height_11">

        <TextView
            android:id="@+id/tv_foot_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size_20"
            android:text="足迹日期"
            android:textColor="@color/font_color_333333"
            android:textSize="@dimen/font_16" />

        <TextView
            android:id="@+id/et_foot_date"
            android:layout_width="@dimen/height_180"
            android:layout_height="@dimen/size_40"
            android:layout_marginLeft="@dimen/height_11"
            android:layout_toRightOf="@id/tv_foot_date"
            android:background="@drawable/selecter_foot_print_bg"
            android:gravity="center_vertical"
            android:hint="请选择要查询足迹的日期"
            android:paddingLeft="@dimen/size_11"
            android:textColorHint="@color/font_color_999999"
            android:textSize="@dimen/font_14" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_8">

        <TextView
            android:id="@+id/tv_foot_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size_20"
            android:text="足迹时间"
            android:textColor="@color/font_color_333333"
            android:textSize="@dimen/font_16" />

        <TextView
            android:id="@+id/et_foot_begin_time"
            android:layout_width="@dimen/height_100"
            android:layout_height="@dimen/size_40"
            android:layout_marginLeft="@dimen/height_11"
            android:layout_toRightOf="@id/tv_foot_time"
            android:background="@drawable/selecter_foot_print_bg"
            android:gravity="center"
            android:hint="起始时间"
            android:textColorHint="@color/font_color_999999"
            android:textSize="@dimen/font_14" />

        <View
            android:id="@+id/devider1"
            android:layout_toRightOf="@id/et_foot_begin_time"
            android:layout_width="@dimen/size_10"
            android:layout_height="@dimen/size_1"
            android:layout_centerVertical="true"
            android:background="@color/color_change"
            android:layout_marginLeft="@dimen/size_5"
            />

        <View
            android:id="@+id/devider2"
            android:layout_toRightOf="@id/devider1"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size_3"
            android:layout_width="@dimen/size_10"
            android:layout_height="@dimen/size_1"
            android:background="@color/color_change"
            />

        <TextView
            android:id="@+id/et_foot_end_time"
            android:layout_width="@dimen/height_100"
            android:layout_height="@dimen/size_40"
            android:layout_marginLeft="@dimen/size_5"
            android:layout_toRightOf="@id/devider2"
            android:background="@drawable/selecter_foot_print_bg"
            android:gravity="center"
            android:hint="结束时间"
            android:textColorHint="@color/font_color_999999"
            android:textSize="@dimen/font_14" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_8">

        <TextView
            android:id="@+id/tv_space_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size_20"
            android:text="定隔时间"
            android:textColor="@color/font_color_333333"
            android:textSize="@dimen/font_16" />

        <EditText
            android:id="@+id/et_space_time"
            android:layout_width="@dimen/height_180"
            android:layout_height="@dimen/size_40"
            android:layout_marginLeft="@dimen/height_11"
            android:layout_toRightOf="@id/tv_space_time"
            android:background="@drawable/selecter_foot_print_bg"
            android:gravity="center_vertical"
            android:hint="输入范围: 0-60"
            android:paddingLeft="@dimen/size_11"
            android:textColorHint="@color/font_color_999999"
            android:textSize="@dimen/font_14" />
    </RelativeLayout>

    <TextView
        android:id="@+id/bt_sure"
        android:layout_width="@dimen/height_80"
        android:layout_height="@dimen/size_30"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/size_11"
        android:layout_marginBottom="@dimen/size_11"
        android:background="@drawable/selecter_foot_sure_bg"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/font_18" />


</LinearLayout>