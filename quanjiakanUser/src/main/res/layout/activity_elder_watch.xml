<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_color"
    >


    <include
        android:id="@+id/title"
        layout="@layout/layout_title" />

    <!--<ListView-->
        <!--android:id="@+id/list"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_below="@id/title"-->
        <!--android:background="@color/white"-->
        <!--android:divider="@null" />-->
    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:background="@color/white"
        android:layout_below="@id/title"/>


    <!-- *******************************  无数据时显示的View -->
    <ImageView
        android:id="@+id/nonedata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/height_200"
        android:src="@drawable/message_group_ico_sel" />

    <TextView
        android:id="@+id/nonedatahint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nonedata"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_10"
        android:text="暂无设置提醒事宜"
        android:textColor="@color/font_color_333333"
        android:textSize="@dimen/font_18"
         />


    <TextView
        android:id="@+id/nonedatabtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nonedatahint"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_10"
        android:paddingLeft="@dimen/size_25"
        android:paddingRight="@dimen/size_25"
        android:text="去添加提醒"
        android:paddingTop="@dimen/margin_10"
        android:paddingBottom="@dimen/margin_10"
        android:textColor="@color/color_btn_green"
        android:background="@drawable/selecter_hollow_gray"
        android:textSize="@dimen/font_14"
        />

    <!-- ******************************* -->

</RelativeLayout>
