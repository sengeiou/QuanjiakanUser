<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/title"
        layout="@layout/layout_title"
        />

    <LinearLayout
        android:id="@+id/ll_select_time"
        android:layout_below="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="160dip"
        android:background="@color/transparent"
        android:gravity="center_vertical"
        android:orientation="horizontal" >


        <com.quanjiakanuser.widget.WheelView
            android:id="@+id/wv_hour"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1" />

        <com.quanjiakanuser.widget.WheelView
            android:id="@+id/wv_minute"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1" />

    </LinearLayout>

    <View
        android:layout_below="@+id/ll_select_time"
        android:id="@+id/tv_aboutus_div4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"
        android:background="@color/font_color_EEEEEE"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        />


    <View
        android:layout_below="@+id/ll_select_week"
        android:id="@+id/tv_aboutus_div1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"
        android:background="@color/font_color_EEEEEE"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        />

    <RelativeLayout
        android:layout_below="@+id/tv_aboutus_div1"
        android:id="@+id/rl_plan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_plan_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_medium"
            android:textColor="@color/color_title_green"
            android:paddingTop="@dimen/size_15"
            android:paddingBottom="@dimen/size_15"
            android:paddingLeft="@dimen/size_15"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:drawableRight="@drawable/setting_more_arrow"
            android:paddingRight="@dimen/margin_20"
            android:drawablePadding="@dimen/margin_5"
            />

        <TextView
            android:id="@+id/tv_plans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_medium"
            android:textColor="@color/hei222"
            android:paddingTop="@dimen/size_15"
            android:paddingBottom="@dimen/size_15"
            android:paddingLeft="@dimen/size_15"
            android:text="计划名称"
            android:gravity="center_vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <View
        android:layout_below="@+id/rl_plan"
        android:id="@+id/tv_aboutus_div2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"
        android:background="@color/font_color_EEEEEE"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        />


    <RelativeLayout
        android:id="@+id/rl_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_below="@+id/tv_aboutus_div2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/iv_close_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_medium"
            android:textColor="@color/color_title_green"
            android:paddingTop="@dimen/size_15"
            android:paddingBottom="@dimen/size_15"
            android:paddingLeft="@dimen/size_15"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:src="@drawable/edit_btn_open"
            android:paddingRight="@dimen/margin_20"
            android:drawablePadding="@dimen/margin_5"
            />

        <TextView
            android:id="@+id/tv_p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_medium"
            android:textColor="@color/hei222"
            android:paddingTop="@dimen/size_15"
            android:paddingBottom="@dimen/size_15"
            android:paddingLeft="@dimen/size_15"
            android:text="开/关"
            android:gravity="center_vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <!--<View
        android:layout_below="@+id/rl_switch"
        android:id="@+id/tv_aboutus_div3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"
        android:background="@color/font_color_EEEEEE"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        />-->

    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:text="保存"
        android:textColor="@color/color_title_green"
        android:textSize="@dimen/font_16"
        android:background="@drawable/selecter_bind_device_hollow_green"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:padding="@dimen/margin_10"
        />

    <LinearLayout
        android:id="@+id/ll_select_week"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:layout_below="@+id/tv_aboutus_div4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:layout_gravity="center">
        <TextView
            android:id="@+id/tv_mon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:textSize="12sp"
            android:layout_centerInParent="true"
            android:textColor="@color/font_color_333333"
            android:background="@drawable/shape_week_nor"
            android:text="星期一"/>

    </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/tv_tue"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:textSize="12sp"
                android:textColor="@color/font_color_333333"
                android:background="@drawable/shape_week_nor"
                android:text="星期二"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/tv_wed"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:textSize="12sp"
                android:textColor="@color/font_color_333333"
                android:background="@drawable/shape_week_nor"
                android:text="星期三"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/tv_thur"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:textColor="@color/font_color_333333"
                android:background="@drawable/shape_week_nor"
                android:text="星期四"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:textSize="12sp"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/tv_fri"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:textSize="12sp"
                android:textColor="@color/font_color_333333"
                android:background="@drawable/shape_week_nor"
                android:text="星期五"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/tv_sat"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:textSize="12sp"
                android:textColor="@color/font_color_333333"
                android:background="@drawable/shape_week_nor"
                android:text="星期六"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/tv_sun"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:textSize="12sp"
                android:textColor="@color/font_color_333333"
                android:background="@drawable/shape_week_nor"
                android:text="星期日"/>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>